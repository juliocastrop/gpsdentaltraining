/**
 * Account Dashboard - GPS Dental Training
 * Protected page showing user's overview and quick links
 */
import '../../styles/global.css';
import Navbar from '../../components/layout/Navbar';
import Footer from '../../components/layout/Footer';
import { supabaseAdmin } from '../../lib/supabase/client';

// Check if Clerk is configured
const clerkConfigured = !!process.env.PUBLIC_CLERK_PUBLISHABLE_KEY;

// Get user from Clerk if available
let userId: string | null = null;
try {
  if (clerkConfigured && Astro.locals.auth) {
    const auth = Astro.locals.auth();
    userId = auth?.userId || null;
  }
} catch {
  // Clerk not available
}

// If Clerk is not configured, show a demo/placeholder page
// In production with Clerk, redirect to sign-in if not authenticated
if (clerkConfigured && !userId) {
  return Astro.redirect('/sign-in?redirect_url=/account');
}

// Initialize variables for demo mode or real user data
let user: any = null;
let upcomingTickets: any[] = [];
let totalCredits = 0;
let ordersCount = 0;
let certificatesCount = 0;

// Only fetch data if we have a userId (Clerk is configured and user is logged in)
if (userId) {
  // Get user data from Supabase
  const { data: userData } = await supabaseAdmin
    .from('users')
    .select('*')
    .eq('clerk_id', userId)
    .single();
  user = userData;

  if (user) {
    // Get user's upcoming courses
    const { data: tickets } = await supabaseAdmin
      .from('tickets')
      .select(`
        id,
        ticket_code,
        status,
        event:events (
          id,
          title,
          slug,
          start_date,
          venue,
          featured_image_url
        )
      `)
      .eq('user_id', user.id)
      .eq('status', 'valid')
      .order('created_at', { ascending: false })
      .limit(3);
    upcomingTickets = tickets || [];

    // Get user's CE credits total
    const { data: credits } = await supabaseAdmin
      .from('ce_ledger')
      .select('credits')
      .eq('user_id', user.id)
      .eq('transaction_type', 'earned');
    totalCredits = credits?.reduce((sum, c) => sum + c.credits, 0) || 0;

    // Get recent orders count
    const { count: orders } = await supabaseAdmin
      .from('orders')
      .select('id', { count: 'exact', head: true })
      .eq('user_id', user.id);
    ordersCount = orders || 0;

    // Get certificates count
    const { count: certs } = await supabaseAdmin
      .from('certificates')
      .select('id', { count: 'exact', head: true })
      .eq('user_id', user.id);
    certificatesCount = certs || 0;
  }
}

const userName = user?.first_name || 'there';

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}
