---
/**
 * Certificates Page - GPS Dental Training
 * Shows user's earned certificates with download options
 */
import '../../styles/global.css';
import Navbar from '../../components/layout/Navbar';
import Footer from '../../components/layout/Footer';
import { supabaseAdmin } from '../../lib/supabase/client';
import { getUserCertificates } from '../../lib/supabase/queries';

// Check if Clerk is configured
const clerkConfigured = !!process.env.PUBLIC_CLERK_PUBLISHABLE_KEY;

// Get user from Clerk if available
let userId: string | null = null;
try {
  if (clerkConfigured && Astro.locals.auth) {
    const auth = Astro.locals.auth();
    userId = auth?.userId || null;
  }
} catch {
  // Clerk not available
}

// Redirect if Clerk is configured but user is not logged in
if (clerkConfigured && !userId) {
  return Astro.redirect('/sign-in?redirect_url=/account/certificates');
}

// Initialize variables
let user: any = null;
let certificates: any[] = [];

// Fetch data if user is logged in
if (userId) {
  // Get user from Supabase
  const { data: userData } = await supabaseAdmin
    .from('users')
    .select('*')
    .eq('clerk_id', userId)
    .single();
  user = userData;

  if (user) {
    try {
      certificates = await getUserCertificates(user.id);
    } catch (error) {
      console.error('Error fetching certificates:', error);
    }
  }
}

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'long',
    day: 'numeric',
    year: 'numeric',
  });
}

function formatShortDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Open+Sans:wght@400;500;600&display=swap" rel="stylesheet" />

    <title>Certificates | GPS Dental Training</title>
  </head>

  <body class="min-h-screen flex flex-col bg-[#F8F9FA]">
    <Navbar
      logo="/logo.svg"
      transparent={false}
      client:load
    />

    <!-- Spacer for fixed navbar -->
    <div class="h-20"></div>

    <main class="flex-1 py-8 lg:py-12">
      <div class="container mx-auto px-4 lg:px-8 max-w-5xl">
        <!-- Breadcrumb -->
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-6">
          <a href="/account" class="hover:text-[#0B52AC] transition-colors">My Account</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <span class="text-[#0C2044] font-medium">Certificates</span>
        </nav>

        <!-- Header -->
        <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4 mb-8">
          <div>
            <h1 class="text-3xl font-bold text-[#0C2044] mb-2">My Certificates</h1>
            <p class="text-gray-600">
              Download and share your course completion certificates.
            </p>
          </div>
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
            <span>{certificates.length} certificate{certificates.length !== 1 ? 's' : ''}</span>
          </div>
        </div>

        <!-- Certificates Grid -->
        {certificates && certificates.length > 0 ? (
          <div class="grid md:grid-cols-2 gap-6">
            {certificates.map((certificate: any) => (
              <div class="bg-white rounded-xl shadow-sm overflow-hidden group">
                <!-- Certificate Preview -->
                <div class="relative aspect-[4/3] bg-gradient-to-br from-[#0C2044] via-[#173D84] to-[#0C2044] p-6 flex flex-col items-center justify-center text-white">
                  <!-- Decorative Border -->
                  <div class="absolute inset-4 border-2 border-[#DDC89D]/30 rounded-lg pointer-events-none"></div>

                  <!-- GPS Logo placeholder -->
                  <div class="mb-4">
                    <svg class="w-12 h-12 text-[#DDC89D]" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
                    </svg>
                  </div>

                  <p class="text-[#DDC89D] text-xs uppercase tracking-widest mb-2">Certificate of Completion</p>
                  <h3 class="text-lg font-bold text-center mb-2 line-clamp-2 px-4">
                    {certificate.event?.title?.replace('[TEST] ', '') || 'Course Certificate'}
                  </h3>
                  <p class="text-white/70 text-sm">
                    {certificate.attendee_name}
                  </p>

                  {/* CE Credits Badge */}
                  {certificate.event?.ce_credits && (
                    <div class="absolute top-4 right-4 bg-[#DDC89D] text-[#0C2044] px-3 py-1 rounded-full text-xs font-bold">
                      {certificate.event.ce_credits} CE
                    </div>
                  )}

                  {/* Hover Overlay */}
                  <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-3">
                    {certificate.pdf_url && (
                      <a
                        href={certificate.pdf_url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="px-4 py-2 bg-white text-[#0C2044] font-semibold rounded-lg hover:bg-[#DDC89D] transition-colors flex items-center gap-2"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Download
                      </a>
                    )}
                    <a
                      href={`/certificate/${certificate.certificate_code}`}
                      class="px-4 py-2 bg-white/20 text-white font-semibold rounded-lg hover:bg-white/30 transition-colors flex items-center gap-2"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                      </svg>
                      Verify
                    </a>
                  </div>
                </div>

                <!-- Certificate Info -->
                <div class="p-4">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-xs text-gray-500 mb-1">Issued on</p>
                      <p class="font-medium text-[#0C2044]">
                        {formatShortDate(certificate.generated_at)}
                      </p>
                    </div>
                    <div class="text-right">
                      <p class="text-xs text-gray-500 mb-1">Certificate ID</p>
                      <p class="font-mono text-xs text-gray-600">
                        {certificate.certificate_code}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <!-- Empty State -->
          <div class="bg-white rounded-xl shadow-sm p-12 text-center">
            <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[#0C2044] mb-2">No Certificates Yet</h3>
            <p class="text-gray-500 mb-6 max-w-md mx-auto">
              Complete a course or seminar to earn your certificate. Certificates are issued
              after successful attendance and check-in.
            </p>
            <a
              href="/courses"
              class="inline-flex items-center gap-2 px-6 py-3 bg-[#0B52AC] text-white font-semibold rounded-lg hover:bg-[#0C2044] transition-colors"
            >
              Browse Courses
            </a>
          </div>
        )}

        <!-- PACE Info -->
        <div class="mt-8 bg-gradient-to-r from-[#0C2044] to-[#173D84] rounded-xl p-6 lg:p-8 text-white">
          <div class="flex flex-col lg:flex-row items-center gap-6">
            <div class="w-20 h-20 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-10 h-10 text-[#DDC89D]" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"/>
                <path d="M9.394 11.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84l7 3a1 1 0 00.788 0l7-3a1 1 0 000-1.838l-7-3z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2">PACE Approved Certificates</h3>
              <p class="text-white/80">
                All certificates from GPS Dental Training are from a nationally approved PACE
                program provider, recognized for FAGD/MAGD credit. Your CE credits are valid
                for dental license renewal across the United States.
              </p>
            </div>
          </div>
        </div>

        <!-- Verification Info -->
        <div class="mt-6 bg-white rounded-xl shadow-sm p-6">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-[#0C2044] mb-1">Certificate Verification</h3>
              <p class="text-gray-600 text-sm">
                Each certificate has a unique verification code. Employers and licensing boards
                can verify your certificates at
                <code class="bg-gray-100 px-1.5 py-0.5 rounded text-xs">gpsdentaltraining.com/certificate/[code]</code>
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer client:load />
  </body>
</html>
