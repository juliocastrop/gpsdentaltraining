/**
 * Admin Attendance Page - GPS Dental Training
 * Check-in attendees via QR scan, manual entry, or search
 */
import '../../../styles/global.css';
import { getSiteSettings } from '../../../lib/data/site-settings-loader';
const siteSettings = await getSiteSettings();
import Navbar from '../../../components/layout/Navbar';
import Footer from '../../../components/layout/Footer';
import { supabaseAdmin } from '../../../lib/supabase/client';
import { getUpcomingEventsForAttendance, getEventTicketsForAttendance, getEventCheckedInAttendees } from '../../../lib/supabase/queries';

// Check if Clerk is configured
const clerkConfigured = !!process.env.PUBLIC_CLERK_PUBLISHABLE_KEY;

// Get user from Clerk if available
let userId: string | null = null;
let isAdmin = false;
try {
  if (clerkConfigured && Astro.locals.auth) {
    const auth = Astro.locals.auth();
    userId = auth?.userId || null;

    // Check if user is admin (you would check against your user roles)
    if (userId) {
      const { data: userData } = await supabaseAdmin
        .from('users')
        .select('role')
        .eq('clerk_id', userId)
        .single();
      isAdmin = userData?.role === 'admin';
    }
  }
} catch {
  // Clerk not available
}

// Redirect if not logged in or not admin
if (clerkConfigured && (!userId || !isAdmin)) {
  return Astro.redirect('/sign-in?redirect_url=/admin/attendance');
}

// Get selected event from query params
const selectedEventId = Astro.url.searchParams.get('event');

// Fetch upcoming events
let events: any[] = [];
let selectedEvent: any = null;
let tickets: any[] = [];
let checkedIn: any[] = [];

try {
  events = await getUpcomingEventsForAttendance();

  if (selectedEventId) {
    selectedEvent = events.find(e => e.id === selectedEventId);
    if (selectedEvent) {
      tickets = await getEventTicketsForAttendance(selectedEventId);
      checkedIn = await getEventCheckedInAttendees(selectedEventId);
    }
  }
} catch (error) {
  console.error('Error fetching data:', error);
}

// Calculate stats
const totalTickets = tickets.length;
const checkedInCount = tickets.filter(t => t.attendance && t.attendance.length > 0).length;
const pendingCount = totalTickets - checkedInCount;

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    weekday: 'short',
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}

function formatTime(dateStr: string): string {
  return new Date(dateStr).toLocaleTimeString('en-US', {
    hour: 'numeric',
    minute: '2-digit',
  });
}
