            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <span class="text-[#0C2044] font-medium">Attendance</span>
        </nav>

        <!-- Header -->
        <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4 mb-8">
          <div>
            <h1 class="text-3xl font-bold text-[#0C2044] mb-2">Attendance Check-in</h1>
            <p class="text-gray-600">
              Check in attendees using QR scan, manual entry, or search.
            </p>
          </div>
        </div>

        <!-- Event Selector -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
          <label for="event-select" class="block text-sm font-medium text-gray-700 mb-2">
            Select Event
          </label>
          <select
            id="event-select"
            class="w-full max-w-md px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0B52AC] focus:border-transparent"
            onchange="window.location.href = this.value ? `/admin/attendance?event=${this.value}` : '/admin/attendance'"
          >
            <option value="">Choose an event...</option>
            {events.map((event) => (
              <option value={event.id} selected={event.id === selectedEventId}>
                {event.title?.replace('[TEST] ', '')} - {formatDate(event.start_date)}
              </option>
            ))}
          </select>
        </div>

        {selectedEvent ? (
          <>
            <!-- Event Info & Stats -->
            <div class="grid md:grid-cols-4 gap-4 mb-6">
              <div class="md:col-span-2 bg-white rounded-xl shadow-sm p-6">
                <h2 class="font-semibold text-[#0C2044] mb-2">
                  {selectedEvent.title?.replace('[TEST] ', '')}
                </h2>
                <p class="text-gray-600 text-sm">
                  {formatDate(selectedEvent.start_date)}
                  {selectedEvent.end_date && selectedEvent.end_date !== selectedEvent.start_date && (
                    <> - {formatDate(selectedEvent.end_date)}</>
                  )}
                </p>
                <p class="text-gray-500 text-sm mt-1">{selectedEvent.venue}</p>
              </div>

              <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-2xl font-bold text-[#0C2044]">{checkedInCount}</p>
                    <p class="text-sm text-gray-500">Checked In</p>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-2xl font-bold text-[#0C2044]">{pendingCount}</p>
                    <p class="text-sm text-gray-500">Pending</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Check-in Methods -->
            <div class="grid lg:grid-cols-2 gap-6 mb-6">
              <!-- QR Scanner -->
              <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                <div class="p-4 border-b border-gray-200">
                  <h3 class="font-semibold text-[#0C2044] flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
                    </svg>
                    QR Scanner
                  </h3>
                </div>
                <div class="p-4">
                  <div id="qr-reader" class="w-full aspect-video bg-gray-100 rounded-lg mb-4"></div>
                  <button
                    id="start-scanner-btn"
                    class="w-full px-4 py-2 bg-[#0B52AC] text-white font-semibold rounded-lg hover:bg-[#0C2044] transition-colors"
                  >
                    Start Scanner
                  </button>
                  <div id="scanner-status" class="mt-4 text-center text-sm text-gray-600 hidden"></div>
                </div>
              </div>

              <!-- Manual Entry / Search -->
              <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                <div class="p-4 border-b border-gray-200">
                  <h3 class="font-semibold text-[#0C2044] flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    Search / Manual Entry
                  </h3>
                </div>
                <div class="p-4">
                  <div class="mb-4">
                    <label for="search-input" class="block text-sm font-medium text-gray-700 mb-1">
                      Search by name, email, or ticket code
                    </label>
                    <input
                      type="text"
                      id="search-input"
                      placeholder="Enter search term..."
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0B52AC] focus:border-transparent"
                    />
                  </div>
                  <div id="search-results" class="space-y-2 max-h-64 overflow-y-auto"></div>
                </div>
              </div>
            </div>

            <!-- Attendees List -->
            <div class="bg-white rounded-xl shadow-sm overflow-hidden">
              <div class="p-4 border-b border-gray-200 flex items-center justify-between">
                <h3 class="font-semibold text-[#0C2044]">All Attendees ({totalTickets})</h3>
                <div class="flex items-center gap-2">
                  <label class="flex items-center gap-2 text-sm text-gray-600">
                    <input type="checkbox" id="filter-pending" class="rounded border-gray-300 text-[#0B52AC] focus:ring-[#0B52AC]" />
                    Show pending only
                  </label>
                </div>
              </div>
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Attendee</th>
                      <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Ticket</th>
                      <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
                      <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Action</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200" id="attendees-list">
                    {tickets.map((ticket) => {
                      const isCheckedIn = ticket.attendance && ticket.attendance.length > 0;
                      return (
                        <tr class={`attendee-row ${isCheckedIn ? 'checked-in' : 'pending'}`} data-ticket-id={ticket.id}>
                          <td class="px-4 py-4">
                            <div class="flex items-center gap-3">
                              <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center">
                                <span class="text-sm font-semibold text-gray-600">
                                  {ticket.attendee_name?.charAt(0) || 'A'}
                                </span>
                              </div>
                              <div>
                                <p class="font-medium text-[#0C2044]">{ticket.attendee_name}</p>
                                <p class="text-sm text-gray-500">{ticket.attendee_email}</p>
                              </div>
                            </div>
                          </td>
                          <td class="px-4 py-4">
                            <p class="font-mono text-sm text-gray-600">{ticket.ticket_code}</p>
                            <p class="text-xs text-gray-400">{ticket.ticket_type?.name}</p>
                          </td>
                          <td class="px-4 py-4">
                            {isCheckedIn ? (
                              <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-100 text-green-700 text-xs font-semibold rounded-full">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                Checked In
                              </span>
                            ) : (
                              <span class="inline-flex items-center gap-1 px-2 py-1 bg-yellow-100 text-yellow-700 text-xs font-semibold rounded-full">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                                </svg>
                                Pending
                              </span>
                            )}
                          </td>
                          <td class="px-4 py-4">
                            {!isCheckedIn && (
                              <button
                                class="check-in-btn px-3 py-1 bg-[#0B52AC] text-white text-sm font-semibold rounded-lg hover:bg-[#0C2044] transition-colors"
                                data-ticket-code={ticket.ticket_code}
                                data-attendee-name={ticket.attendee_name}
                              >
                                Check In
                              </button>
                            )}
                            {isCheckedIn && (
                              <span class="text-sm text-gray-500">
                                {formatTime(ticket.attendance[0].checked_in_at)}
                              </span>
                            )}
                          </td>
                        </tr>
                      );
                    })}
                  </tbody>
                </table>
              </div>
            </div>
          </>
        ) : (
          <!-- No Event Selected -->
          <div class="bg-white rounded-xl shadow-sm p-12 text-center">
            <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[#0C2044] mb-2">Select an Event</h3>
            <p class="text-gray-500 max-w-md mx-auto">
              Choose an event from the dropdown above to manage attendance check-ins.
            </p>
          </div>
        )}
      </div>
    </main>

    <Footer client:load />

    <!-- Check-in Success Modal -->
    <div id="success-modal" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden">
      <div class="bg-white rounded-2xl p-8 max-w-md mx-4 text-center">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-[#0C2044] mb-2">Check-in Successful!</h3>
        <p class="text-gray-600 mb-2" id="modal-attendee-name"></p>
        <p class="text-sm text-gray-500 mb-6" id="modal-credits-awarded"></p>
        <button
          id="modal-close-btn"
          class="px-6 py-2 bg-[#0B52AC] text-white font-semibold rounded-lg hover:bg-[#0C2044] transition-colors"
        >
          Continue
        </button>
      </div>
    </div>

    <script define:vars={{ selectedEventId }}>
      let html5QrCode = null;
      let isScanning = false;

      // Wait for DOM and Html5Qrcode library to be ready
      function initScanner() {
        const startScannerBtn = document.getElementById('start-scanner-btn');
        const scannerStatus = document.getElementById('scanner-status');

        if (!startScannerBtn) return;

        startScannerBtn.addEventListener('click', async () => {
          // Check if Html5Qrcode library is loaded
          if (typeof Html5Qrcode === 'undefined') {
            scannerStatus.textContent = 'QR Scanner library is loading. Please wait and try again.';
            scannerStatus.classList.remove('hidden');
            scannerStatus.classList.add('text-yellow-600');
            return;
          }

          if (!isScanning) {
            try {
              html5QrCode = new Html5Qrcode("qr-reader");
              await html5QrCode.start(
                { facingMode: "environment" },
                { fps: 10, qrbox: { width: 250, height: 250 } },
                onScanSuccess,
                () => {} // Ignore scan failures
              );
              isScanning = true;
              startScannerBtn.textContent = 'Stop Scanner';
              startScannerBtn.classList.remove('bg-[#0B52AC]');
              startScannerBtn.classList.add('bg-red-600');
              scannerStatus.classList.add('hidden');
            } catch (err) {
              console.error('Failed to start scanner:', err);
              let errorMessage = 'Failed to start camera.';
              if (err.name === 'NotAllowedError') {
                errorMessage = 'Camera permission denied. Please allow camera access.';
              } else if (err.name === 'NotFoundError') {
                errorMessage = 'No camera found on this device.';
              } else if (err.name === 'NotReadableError') {
                errorMessage = 'Camera is in use by another application.';
              }
              scannerStatus.textContent = errorMessage;
              scannerStatus.classList.remove('hidden');
              scannerStatus.classList.add('text-red-600');
            }
          } else {
            try {
              await html5QrCode.stop();
            } catch (e) {
              console.warn('Error stopping scanner:', e);
            }
            isScanning = false;
            startScannerBtn.textContent = 'Start Scanner';
            startScannerBtn.classList.add('bg-[#0B52AC]');
            startScannerBtn.classList.remove('bg-red-600');
            scannerStatus.classList.add('hidden');
          }
        });
      }

      // Handle QR scan success - call the check-in API
      async function onScanSuccess(decodedText) {
        const scannerStatus = document.getElementById('scanner-status');

        // Stop scanner to prevent multiple scans
        if (html5QrCode && isScanning) {
          try {
            await html5QrCode.stop();
            isScanning = false;
            const startScannerBtn = document.getElementById('start-scanner-btn');
            if (startScannerBtn) {
              startScannerBtn.textContent = 'Start Scanner';
              startScannerBtn.classList.add('bg-[#0B52AC]');
              startScannerBtn.classList.remove('bg-red-600');
            }
          } catch (e) {
            console.warn('Error stopping scanner:', e);
          }
        }

        // Show processing status
        scannerStatus.textContent = 'Processing...';
        scannerStatus.classList.remove('hidden', 'text-red-600', 'text-green-600');
        scannerStatus.classList.add('text-blue-600');

        try {
          // Call check-in API with QR data
          const response = await fetch('/api/admin/attendance/check-in', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              qrData: decodedText,
              checkInMethod: 'qr_scan'
            })
          });

          const result = await response.json();

          if (result.success) {
            // Show success modal
            const successModal = document.getElementById('success-modal');
            const modalAttendeeName = document.getElementById('modal-attendee-name');
            const modalCreditsAwarded = document.getElementById('modal-credits-awarded');

            if (modalAttendeeName) {
              modalAttendeeName.textContent = result.data?.attendeeName || 'Attendee';
            }
            if (modalCreditsAwarded) {
              modalCreditsAwarded.textContent = result.data?.creditsAwarded
                ? `${result.data.creditsAwarded} CE Credits awarded`
                : '';
            }
            if (successModal) {
              successModal.classList.remove('hidden');
            }

            scannerStatus.textContent = `âœ“ ${result.data?.attendeeName || 'Attendee'} checked in!`;
            scannerStatus.classList.remove('text-blue-600');
            scannerStatus.classList.add('text-green-600');
          } else {
            scannerStatus.textContent = result.error || 'Check-in failed';
            scannerStatus.classList.remove('text-blue-600');
            scannerStatus.classList.add('text-red-600');
          }
        } catch (err) {
          console.error('Check-in error:', err);
          scannerStatus.textContent = 'Network error. Please try again.';
          scannerStatus.classList.remove('text-blue-600');
          scannerStatus.classList.add('text-red-600');
        }
      }

      // Initialize when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initScanner);
      } else {
        initScanner();
      }

      // Initialize search and other functionality
      function initAttendanceFeatures() {
        // Search functionality
        const searchInput = document.getElementById('search-input');
        const attendeeRows = document.querySelectorAll('.attendee-row');

        if (searchInput) {
          searchInput.addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase();

            attendeeRows.forEach(row => {
              const name = row.querySelector('.font-medium')?.textContent?.toLowerCase() || '';
              const email = row.querySelector('.text-gray-500')?.textContent?.toLowerCase() || '';
              const code = row.querySelector('.font-mono')?.textContent?.toLowerCase() || '';

              if (name.includes(query) || email.includes(query) || code.includes(query)) {
                row.style.display = '';
              } else {
                row.style.display = 'none';
              }
            });
          });
        }

        // Filter pending only
        const filterPending = document.getElementById('filter-pending');
        if (filterPending) {
          filterPending.addEventListener('change', (e) => {
            attendeeRows.forEach(row => {
              if (e.target.checked && row.classList.contains('checked-in')) {
                row.style.display = 'none';
              } else {
                row.style.display = '';
              }
            });
          });
        }

        // Check-in buttons
        const checkInBtns = document.querySelectorAll('.check-in-btn');
        const successModal = document.getElementById('success-modal');
        const modalAttendeeName = document.getElementById('modal-attendee-name');
        const modalCreditsAwarded = document.getElementById('modal-credits-awarded');
        const modalCloseBtn = document.getElementById('modal-close-btn');

        checkInBtns.forEach(btn => {
          btn.addEventListener('click', async (e) => {
            const ticketCode = e.target.dataset.ticketCode;
            const attendeeName = e.target.dataset.attendeeName;

            // Disable button while processing
            e.target.disabled = true;
            e.target.textContent = 'Processing...';

            try {
              const response = await fetch('/api/admin/attendance/check-in', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  ticketCode,
                  checkInMethod: 'manual'
                })
              });

              const result = await response.json();

              if (result.success) {
                // Show success modal
                if (modalAttendeeName) {
                  modalAttendeeName.textContent = result.data?.attendeeName || attendeeName;
                }
                if (modalCreditsAwarded) {
                  modalCreditsAwarded.textContent = result.data?.creditsAwarded
                    ? `${result.data.creditsAwarded} CE Credits awarded`
                    : '';
                }
                if (successModal) {
                  successModal.classList.remove('hidden');
                }
              } else {
                alert(result.error || 'Failed to check in');
                e.target.disabled = false;
                e.target.textContent = 'Check In';
              }
            } catch (err) {
              console.error('Check-in error:', err);
              alert('Failed to check in. Please try again.');
              e.target.disabled = false;
              e.target.textContent = 'Check In';
            }
          });
        });

        // Close modal
        if (modalCloseBtn) {
          modalCloseBtn.addEventListener('click', () => {
            successModal.classList.add('hidden');
            window.location.reload(); // Refresh to update counts
          });
        }

        // Close modal on backdrop click
        if (successModal) {
          successModal.addEventListener('click', (e) => {
            if (e.target === successModal) {
              successModal.classList.add('hidden');
              window.location.reload();
            }
          });
        }
      }

      // Initialize everything when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initAttendanceFeatures);
      } else {
        initAttendanceFeatures();
      }
    </script>
  </body>
</html>
