/**
 * Admin Certificates Page - GPS Dental Training
 * Generate and manage certificates for event attendees
 * Supports different templates for Courses vs Monthly Seminars
 */
import '../../../styles/global.css';
import Navbar from '../../../components/layout/Navbar';
import Footer from '../../../components/layout/Footer';
import { supabaseAdmin } from '../../../lib/supabase/client';
import {
  getAllEventsAdmin,
  getEventCertificatesAdmin,
  getEligibleForCertificates,
} from '../../../lib/supabase/queries';

// Check if Clerk is configured
const clerkConfigured = !!process.env.PUBLIC_CLERK_PUBLISHABLE_KEY;

// Get user from Clerk if available
let userId: string | null = null;
let isAdmin = false;
try {
  if (clerkConfigured && Astro.locals.auth) {
    const auth = Astro.locals.auth();
    userId = auth?.userId || null;

    if (userId) {
      const { data: userData } = await supabaseAdmin
        .from('users')
        .select('role')
        .eq('clerk_id', userId)
        .single();
      isAdmin = userData?.role === 'admin';
    }
  }
} catch {
  // Clerk not available
}

// Redirect if not logged in or not admin
if (clerkConfigured && (!userId || !isAdmin)) {
  return Astro.redirect('/sign-in?redirect_url=/admin/certificates');
}

// Get selected event from query params
const selectedEventId = Astro.url.searchParams.get('event');
const tab = Astro.url.searchParams.get('tab') || 'eligible';

// Fetch events (both courses and seminars)
let events: any[] = [];
let selectedEvent: any = null;
let certificates: any[] = [];
let eligibleAttendees: any[] = [];

try {
  // Get all events
  events = await getAllEventsAdmin();

  if (selectedEventId) {
    selectedEvent = events.find(e => e.id === selectedEventId);
    if (selectedEvent) {
      certificates = await getEventCertificatesAdmin(selectedEventId);
      eligibleAttendees = await getEligibleForCertificates(selectedEventId);
    }
  }
} catch (error) {
  console.error('Error fetching data:', error);
}

// Stats
const totalCertificates = certificates.length;
const sentCount = certificates.filter(c => c.sent_at).length;
const pendingCount = certificates.filter(c => !c.sent_at).length;
const eligibleCount = eligibleAttendees.length;

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}

function formatDateTime(dateStr: string): string {
  return new Date(dateStr).toLocaleString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
    hour: 'numeric',
    minute: '2-digit',
  });
}
