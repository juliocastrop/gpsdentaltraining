                      {pendingCount > 0 && (
                        <button
                          id="send-all-btn"
                          class="px-4 py-2 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors text-sm"
                        >
                          Send All Pending
                        </button>
                      )}
                    </div>
