                  <div class="flex items-center gap-2 mb-1">
                    <svg class="w-5 h-5 text-[#BC9D67]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <span class="font-medium text-[#0C2044]">Seminar</span>
                  </div>
                  <p class="text-xs text-gray-500">For monthly seminars (bi-annual)</p>
                </div>
              </label>
            </div>
          </div>
        </form>
        <div class="p-6 border-t border-gray-100 flex justify-end gap-3">
          <button
            type="button"
            id="cancelCreateBtn"
            class="px-4 py-2 text-gray-600 font-medium hover:bg-gray-100 rounded-lg transition-colors"
          >
            Cancel
          </button>
          <button
            type="submit"
            form="createForm"
            class="px-5 py-2 bg-[#0B52AC] text-white font-semibold rounded-lg hover:bg-[#0C2044] transition-colors"
          >
            Create Template
          </button>
        </div>
      </div>
    </div>

    <script>
      // Create template modal
      const createBtn = document.getElementById('createTemplateBtn');
      const createModal = document.getElementById('createModal');
      const cancelCreateBtn = document.getElementById('cancelCreateBtn');
      const createForm = document.getElementById('createForm') as HTMLFormElement;
      const nameInput = createForm?.querySelector('input[name="name"]') as HTMLInputElement;
      const slugInput = createForm?.querySelector('input[name="slug"]') as HTMLInputElement;

      createBtn?.addEventListener('click', () => {
        createModal?.classList.remove('hidden');
        createModal?.classList.add('flex');
      });

      cancelCreateBtn?.addEventListener('click', () => {
        createModal?.classList.add('hidden');
        createModal?.classList.remove('flex');
      });

      createModal?.addEventListener('click', (e) => {
        if (e.target === createModal) {
          createModal.classList.add('hidden');
          createModal.classList.remove('flex');
        }
      });

      // Auto-generate slug from name
      nameInput?.addEventListener('input', () => {
        const slug = nameInput.value
          .toLowerCase()
          .replace(/[^a-z0-9]+/g, '-')
          .replace(/(^-|-$)/g, '');
        slugInput.value = slug;
      });

      // Handle form submission
      createForm?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(createForm);

        try {
          const response = await fetch('/api/admin/certificate-templates', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              name: formData.get('name'),
              slug: formData.get('slug'),
              template_type: formData.get('template_type'),
            }),
          });

          if (response.ok) {
            const data = await response.json();
            window.location.href = `/admin/certificate-templates/${data.id}/edit`;
          } else {
            const error = await response.json();
            alert(error.message || 'Failed to create template');
          }
        } catch (error) {
          console.error('Error creating template:', error);
          alert('Failed to create template');
        }
      });

      // Edit template buttons
      document.querySelectorAll('.edit-template-btn').forEach((btn) => {
        btn.addEventListener('click', () => {
          const templateId = (btn as HTMLElement).dataset.templateId;
          window.location.href = `/admin/certificate-templates/${templateId}/edit`;
        });
      });

      // Duplicate template buttons
      document.querySelectorAll('.duplicate-template-btn').forEach((btn) => {
        btn.addEventListener('click', async () => {
          const templateId = (btn as HTMLElement).dataset.templateId;
          const templateName = (btn as HTMLElement).dataset.templateName;
          const newName = prompt('Enter name for the duplicate:', `${templateName} (Copy)`);

          if (newName) {
            const newSlug = newName
              .toLowerCase()
              .replace(/[^a-z0-9]+/g, '-')
              .replace(/(^-|-$)/g, '');

            try {
              const response = await fetch(`/api/admin/certificate-templates/${templateId}/duplicate`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ name: newName, slug: newSlug }),
              });

              if (response.ok) {
                window.location.reload();
              } else {
                const error = await response.json();
                alert(error.message || 'Failed to duplicate template');
              }
            } catch (error) {
              console.error('Error duplicating template:', error);
              alert('Failed to duplicate template');
            }
          }
        });
      });

      // Preview template buttons
      document.querySelectorAll('.preview-template-btn').forEach((btn) => {
        btn.addEventListener('click', () => {
          const templateId = (btn as HTMLElement).dataset.templateId;
          window.open(`/api/admin/certificate-templates/${templateId}/preview`, '_blank');
        });
      });
    </script>
  </body>
</html>
