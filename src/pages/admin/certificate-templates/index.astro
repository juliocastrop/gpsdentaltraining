            <label class="block text-sm font-medium text-[#0C2044] mb-2">Template Name</label>
            <input
              type="text"
              name="name"
              required
              class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#0B52AC]/20 focus:border-[#0B52AC] outline-none"
              placeholder="e.g., Course Certificate v2"
