/**
 * Admin Certificate Templates Page
 * Manage certificate templates for courses and monthly seminars
 * 100% administrable - all text, colors, fonts, and images are configurable
 */
import '../../../styles/global.css';
import { getSiteSettings } from '../../../lib/data/site-settings-loader';
const siteSettings = await getSiteSettings();
import Navbar from '../../../components/layout/Navbar';
import { getCertificateTemplates, getCertificateTemplatesByType } from '../../../lib/supabase/queries';
import type { CertificateTemplate } from '../../../types/database';

// Check if user is admin (simplified - should use middleware in production)
const clerkConfigured = !!process.env.PUBLIC_CLERK_PUBLISHABLE_KEY;
let isAdmin = false;

if (clerkConfigured && Astro.locals.auth) {
  try {
    const auth = Astro.locals.auth();
    isAdmin = !!auth?.userId;
  } catch {
    // Clerk not available
  }
}

// Redirect if not admin
if (!isAdmin && clerkConfigured) {
  return Astro.redirect('/sign-in?redirect_url=/admin/certificate-templates');
}

// Fetch templates
let courseTemplates: CertificateTemplate[] = [];
let seminarTemplates: CertificateTemplate[] = [];

try {
  courseTemplates = await getCertificateTemplatesByType('course');
  seminarTemplates = await getCertificateTemplatesByType('seminar');
} catch (error) {
  console.error('Error fetching templates:', error);
}

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}
