          <div>
            <label class="block text-sm font-medium text-[#0C2044] mb-2">URL Slug</label>
            <input
              type="text"
              name="slug"
              required
              pattern="[a-z0-9-]+"
              class="w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#0B52AC]/20 focus:border-[#0B52AC] outline-none font-mono text-sm"
