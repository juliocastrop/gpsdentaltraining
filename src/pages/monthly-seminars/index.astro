                              <div class="flex gap-3 mt-4">
                                {mod.speaker.social_links.linkedin && (
                                  <a href={mod.speaker.social_links.linkedin} target="_blank" rel="noopener noreferrer" class="text-[#0B52AC] hover:text-[#0C2044] transition-colors">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                    </svg>
                                  </a>
                                )}
                              </div>
                            )}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                )}

                <!-- 3. Session Agenda (Daily Schedule) -->
                <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
                  <h2 class="text-2xl lg:text-3xl font-bold text-[#0C2044] mb-8 flex items-center gap-4">
                    <span class="w-12 h-12 bg-gradient-to-br from-[#DDC89D] to-[#BFAC87] rounded-xl flex items-center justify-center shadow-lg">
                      <svg class="w-6 h-6 text-[#0C2044]" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                      </svg>
                    </span>
                    <span>Session Agenda</span>
                  </h2>

                  <p class="text-gray-600 mb-6">
                    Each session follows a structured format designed to maximize learning and interaction:
                  </p>

                  <div class="space-y-1">
                    {agendaItems.map((item: any) => (
                      <div class="flex gap-4 p-4 rounded-xl transition-colors hover:bg-[#F8F9FA]">
                        <!-- Time -->
                        <div class="flex-shrink-0 w-36 md:w-44">
                          <span class="text-sm font-semibold text-[#0B52AC] bg-[#0B52AC]/10 px-3 py-1.5 rounded-full inline-block">
                            {item.time}
                          </span>
                        </div>

                        <!-- Content -->
                        <div class="flex-1 min-w-0">
                          <h4 class="font-semibold text-[#0C2044]">{item.title}</h4>
                          {item.description && (
                            <p class="text-gray-600 text-sm mt-1">{item.description}</p>
                          )}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>

                <!-- 4. Upcoming Sessions Schedule -->
                {sessions.length > 0 && (
                  <div class="bg-gradient-to-br from-[#0C2044] to-[#173D84] rounded-2xl shadow-xl p-8 lg:p-12 text-white relative overflow-hidden">
                    <!-- Decorative element -->
                    <div class="absolute top-0 right-0 w-64 h-64 bg-[#DDC89D] rounded-full opacity-5 translate-x-1/2 -translate-y-1/2"></div>

                    <h2 class="text-2xl lg:text-3xl font-bold text-white mb-8 flex items-center gap-4 relative z-10">
                      <span class="w-12 h-12 bg-gradient-to-br from-[#DDC89D] to-[#BFAC87] rounded-xl flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6 text-[#0C2044]" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                      </span>
                      <span>{seminar.year} Session Schedule</span>
                    </h2>

                    <div class="space-y-3 relative z-10">
                      {sessions.map((session: any) => {
