                  {seminar.program_description ? (
                    <div class="prose prose-lg max-w-none text-gray-700" set:html={seminar.program_description} />
                  ) : (
                    <div class="space-y-4 text-gray-700 leading-relaxed">
                      <p>
                        Engage in a <strong>{seminar.total_sessions || 10}-session cycle</strong> dedicated to Literature Review,
                        Case Discussions, and Treatment Planning Seminars. Our monthly seminars provide an
                        exceptional opportunity for dental professionals to stay current with the latest research
                        and collaborate with peers in a supportive learning environment.
                      </p>
                      <p>
                        Each session is designed to enhance your clinical knowledge and practical skills through
                        interactive discussions, case presentations, and evidence-based practice reviews.
                      </p>
                    </div>
                  )}

                  <!-- Program Features/Benefits -->
                  {benefits.length > 0 && (
                    <div class="mt-8 pt-8 border-t border-gray-100">
                      <h3 class="font-semibold text-[#0C2044] mb-4">Topics Include:</h3>
                      <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        {benefits.map((benefit: string) => (
                          <li class="flex items-center gap-3">
                            <span class="w-6 h-6 bg-[#DDC89D]/20 rounded-full flex items-center justify-center flex-shrink-0">
                              <svg class="w-4 h-4 text-[#DDC89D]" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                              </svg>
                            </span>
                            <span class="text-gray-700">{benefit}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>

                <!-- 2. Moderator Section -->
                {moderators.length > 0 && (
                  <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
                    <h2 class="text-2xl lg:text-3xl font-bold text-[#0C2044] mb-8 flex items-center gap-4">
                      <span class="w-12 h-12 bg-gradient-to-br from-[#0B52AC] to-[#173D84] rounded-xl flex items-center justify-center shadow-lg">
