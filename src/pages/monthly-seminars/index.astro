---
/**
 * Monthly Seminars Main Page - GPS Dental Training
 * Product-style page for the current active seminar season
 *
 * Structure (matching courses/[slug].astro):
 * 1. Hero with background image
 * 2. Program Description
 * 3. Moderator Profile
 * 4. About Sessions
 * 5. Session Agenda
 * 6. Membership Policy
 * 7. Contact Information
 * 8. Accreditation
 *
 * Sidebar (sticky):
 * - Registration Card with price
 * - Quick Info
 * - Questions?
 */
import '../../styles/global.css';
import Navbar from '../../components/layout/Navbar';
import Footer from '../../components/layout/Footer';
import { supabaseAdmin } from '../../lib/supabase/client';

// Fetch the current active seminar season
const { data: seminar, error } = await supabaseAdmin
  .from('seminars')
  .select(`
    *,
    seminar_sessions (
      id,
      session_number,
      session_date,
      session_time_start,
      session_time_end,
      topic,
      description
    )
  `)
  .eq('status', 'active')
  .order('year', { ascending: false })
  .limit(1)
  .single();

// Fetch moderators for this seminar
let moderators: any[] = [];
if (seminar) {
  const { data: moderatorData } = await supabaseAdmin
    .from('seminar_moderators')
    .select(`
      role,
      display_order,
      speaker:speakers (
        id,
        name,
        title,
        bio,
        photo_url,
        social_links
      )
    `)
    .eq('seminar_id', seminar.id)
    .order('display_order', { ascending: true });

  moderators = moderatorData || [];
}

// Helper functions
function formatCurrency(amount: number): string {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    minimumFractionDigits: 0,
    maximumFractionDigits: 0,
  }).format(amount);
}

function formatSessionDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    weekday: 'long',
    month: 'long',
    day: 'numeric',
    year: 'numeric',
  });
}

function formatTime(timeStr: string | null): string {
  if (!timeStr) return '';
  const [hours, minutes] = timeStr.split(':');
  const hour = parseInt(hours);
  const ampm = hour >= 12 ? 'PM' : 'AM';
  const hour12 = hour % 12 || 12;
  return `${hour12}:${minutes} ${ampm}`;
}

// Sort sessions by session_number
const sessions = seminar?.seminar_sessions?.sort((a: any, b: any) => a.session_number - b.session_number) || [];

// Get next upcoming session
const now = new Date();
const nextSession = sessions.find((s: any) => new Date(s.session_date) >= now);

// Default agenda items if not set
const agendaItems = seminar?.agenda_items || [
  { time: "5:45 PM - 6:00 PM", title: "Meet and Greet", description: "Networking and introductions" },
  { time: "6:00 PM - 7:45 PM", title: "Main Session", description: "Core content and discussions" },
  { time: "7:45 PM - 8:00 PM", title: "Summary & Conclusions", description: "Key takeaways and Q&A" }
];

// Default benefits
const defaultBenefits = [
  "Literature Review Sessions",
  "Case Discussions and Presentations",
  "Treatment Planning Seminars",
  "Surgical Seminars",
  "Peer Networking Opportunities"
];

const benefits = seminar?.benefits || defaultBenefits;
---

