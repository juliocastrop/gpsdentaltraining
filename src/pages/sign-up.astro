---
/**
 * Sign Up Page - GPS Dental Training
 * Styled to match the current WordPress registration page design
 */
import '../styles/global.css';
import { getSiteSettings } from '../lib/data/site-settings-loader';
const siteSettings = await getSiteSettings();
import { SignUp } from '@clerk/astro/react';

const afterSignUpUrl = Astro.url.searchParams.get('redirect_url') || '/account';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />

    <link rel="icon" href={siteSettings.favicon_url} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Open+Sans:wght@400;500;600&display=swap" rel="stylesheet" />

    <title>Create Account | GPS Dental Training</title>

    <style>
      body {
        font-family: 'Open Sans', sans-serif;
      }
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Montserrat', sans-serif;
      }
    </style>
  </head>

  <body class="min-h-screen bg-white">
    <!-- Header -->
    <header class="bg-white border-b border-gray-100">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <!-- Logo -->
          <a href="/" class="flex items-center">
            <img
              src="/logo.svg"
              alt="GPS Dental Training"
              class="h-10 md:h-12"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="hidden flex-col">
              <div class="flex items-center">
                <span class="text-xl font-bold tracking-wider text-[#13326A]">GPS</span>
                <span class="text-xl font-light tracking-wider ml-2 text-[#13326A]">DENTAL</span>
              </div>
              <div class="flex items-center gap-1">
                <div class="w-1.5 h-1.5 bg-[#DDC89D]"></div>
                <span class="text-[#DDC89D] text-[10px] tracking-[0.2em] font-medium">TRAINING</span>
              </div>
            </div>
          </a>

          <!-- Navigation -->
          <div class="hidden md:flex items-center gap-6">
            <a href="/about" class="text-[#293647] hover:text-[#13326A] font-medium transition-colors">About GPS</a>
            <a href="/courses" class="text-[#293647] hover:text-[#13326A] font-medium transition-colors">Courses</a>
            <a href="/contact" class="text-[#293647] hover:text-[#13326A] font-medium transition-colors">Contact</a>
            <a href="/sign-in" class="text-[#293647] hover:text-[#13326A] font-medium transition-colors">Login</a>
            <a href="/sign-up" class="bg-[#13326A] text-white px-5 py-2 rounded-lg font-semibold hover:bg-[#0C2044] transition-colors">
              Signup
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <a href="/sign-in" class="md:hidden text-[#13326A] font-semibold text-sm">
            Login
          </a>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-1 py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-lg mx-auto">
          <!-- Page Title -->
          <div class="text-center mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-[#13326A] mb-3">
              Create Your Account
            </h1>
            <p class="text-[#4E6E82]">
              Join GPS Dental Training and access world-class continuing education
            </p>
          </div>

          <!-- Clerk Sign Up Component -->
          <div class="flex justify-center">
            <SignUp
              client:load
              routing="hash"
              afterSignUpUrl={afterSignUpUrl}
              signInUrl="/sign-in"
              appearance={{
                elements: {
                  rootBox: 'w-full max-w-lg',
                  card: 'shadow-xl border-0 rounded-xl p-6',
                  headerTitle: 'hidden',
                  headerSubtitle: 'hidden',
                  socialButtonsBlockButton: 'border border-gray-200 hover:bg-gray-50 hover:border-[#DDC89D] transition-all duration-300 py-3',
                  socialButtonsBlockButtonText: 'font-medium text-[#293647]',
                  dividerLine: 'bg-gray-200',
                  dividerText: 'text-[#4E6E82] text-sm',
                  formFieldLabel: 'text-[#293647] font-medium mb-1',
                  formFieldInput: 'border border-gray-300 focus:border-[#13326A] focus:ring-1 focus:ring-[#13326A] rounded-lg py-3 px-4',
                  formButtonPrimary: 'bg-[#13326A] hover:bg-[#0C2044] text-white font-semibold py-3 rounded-lg transition-all duration-300 w-full',
                  footerAction: 'justify-center',
                  footerActionLink: 'text-[#13326A] hover:text-[#EA4C22] font-semibold transition-colors',
                  identityPreviewEditButton: 'text-[#13326A] hover:text-[#EA4C22]',
                  formFieldInputShowPasswordButton: 'text-[#4E6E82] hover:text-[#13326A]',
                  alert: 'rounded-lg',
                  alertText: 'text-sm',
                  formFieldRow: 'flex gap-4',
                },
              }}
            />
          </div>

          <!-- Additional Info -->
          <div class="mt-8 text-center space-y-4">
            <p class="text-[#4E6E82]">
              Already have an account?{' '}
              <a href="/sign-in" class="text-[#13326A] font-semibold hover:text-[#EA4C22] transition-colors">
                Sign In
              </a>
            </p>
          </div>

          <!-- Benefits Section -->
          <div class="mt-12 bg-gray-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-[#13326A] mb-4 text-center">
              Member Benefits
            </h3>
            <ul class="space-y-3">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[#DDC89D] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[#293647] text-sm">Access to exclusive dental training courses</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[#DDC89D] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[#293647] text-sm">Track your CE credits automatically</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[#DDC89D] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[#293647] text-sm">Download certificates and attendance records</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[#DDC89D] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[#293647] text-sm">Join Monthly Seminars for ongoing education</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[#DDC89D] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[#293647] text-sm">PACE-approved continuing education provider</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-[#0C2044] text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Logo & Address -->
          <div>
            <div class="flex items-center mb-4">
              <img
                src={siteSettings.logo_white_url}
                alt="GPS Dental Training"
                class="h-10"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <div class="hidden flex-col">
                <div class="flex items-center">
                  <span class="text-lg font-bold tracking-wider">GPS</span>
                  <span class="text-lg font-light tracking-wider ml-2">DENTAL</span>
                </div>
                <span class="text-[#DDC89D] text-[9px] tracking-[0.2em]">TRAINING</span>
              </div>
            </div>
            <address class="not-italic text-gray-300 text-sm leading-relaxed">
              6320 Sugarloaf Parkway<br />
              Duluth, GA 30097
            </address>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="font-semibold text-[#DDC89D] mb-4">Quick Links</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/courses" class="text-gray-300 hover:text-white transition-colors">Courses</a></li>
              <li><a href="/monthly-seminars" class="text-gray-300 hover:text-white transition-colors">Monthly Seminars</a></li>
              <li><a href="/speakers" class="text-gray-300 hover:text-white transition-colors">Speakers</a></li>
              <li><a href="/about" class="text-gray-300 hover:text-white transition-colors">About Us</a></li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h4 class="font-semibold text-[#DDC89D] mb-4">Contact</h4>
            <ul class="space-y-2 text-sm">
              <li>
                <a href="mailto:info@gpsdentaltraining.com" class="text-gray-300 hover:text-white transition-colors">
                  info@gpsdentaltraining.com
                </a>
              </li>
            </ul>
            <!-- Social Icons -->
            <div class="flex gap-4 mt-4">
              <a href="https://facebook.com" target="_blank" rel="noopener" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/></svg>
              </a>
              <a href="https://instagram.com" target="_blank" rel="noopener" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12,2.16c3.2,0,3.58,0,4.85.07,3.25.15,4.77,1.69,4.92,4.92.06,1.27.07,1.65.07,4.85s0,3.58-.07,4.85c-.15,3.23-1.66,4.77-4.92,4.92-1.27.06-1.65.07-4.85.07s-3.58,0-4.85-.07c-3.26-.15-4.77-1.7-4.92-4.92-.06-1.27-.07-1.65-.07-4.85s0-3.58.07-4.85C2.38,3.92,3.9,2.38,7.15,2.23,8.42,2.18,8.8,2.16,12,2.16ZM12,0C8.74,0,8.33,0,7.05.07c-4.27.2-6.78,2.71-7,7C0,8.33,0,8.74,0,12s0,3.67.07,4.95c.2,4.27,2.71,6.78,7,7C8.33,24,8.74,24,12,24s3.67,0,4.95-.07c4.27-.2,6.78-2.71,7-7C24,15.67,24,15.26,24,12s0-3.67-.07-4.95c-.2-4.27-2.71-6.78-7-7C15.67,0,15.26,0,12,0Zm0,5.84A6.16,6.16,0,1,0,18.16,12,6.16,6.16,0,0,0,12,5.84ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.41,4.15a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.41,4.15Z"/></svg>
              </a>
              <a href="https://linkedin.com" target="_blank" rel="noopener" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.45,20.45H16.89V14.88c0-1.33,0-3-1.85-3s-2.13,1.44-2.13,2.93v5.67H9.36V9h3.41v1.56h.05a3.74,3.74,0,0,1,3.37-1.85c3.6,0,4.27,2.37,4.27,5.46v6.32ZM5.34,7.43A2.07,2.07,0,1,1,7.41,5.36,2.07,2.07,0,0,1,5.34,7.43Zm1.78,13H3.56V9H7.12ZM22.22,0H1.77A1.75,1.75,0,0,0,0,1.73V22.27A1.75,1.75,0,0,0,1.77,24H22.22A1.76,1.76,0,0,0,24,22.27V1.73A1.76,1.76,0,0,0,22.22,0Z"/></svg>
              </a>
              <a href="https://vimeo.com" target="_blank" rel="noopener" class="text-gray-400 hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.98,6.43c-.1,2.26-1.68,5.35-4.74,9.28C16,19.77,13.13,22,10.74,22c-1.48,0-2.73-1.37-3.75-4.1l-2-7.4C4.2,7.75,3.35,6.38,2.43,6.38a6.41,6.41,0,0,0-1.67.5L0,5.82,4.82,1.42a6.57,6.57,0,0,1,3.57-1.33c1.92-.2,3.1,1.13,3.54,4,1.56,10.09,2.4,11.23,5.34,6.72a3.9,3.9,0,0,0,.71-2.13c0-2.28-2.08-2.23-2.08-2.23a4.31,4.31,0,0,1,4.22-3C22.43,3.5,24.1,4.67,24,6.43Z"/></svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Copyright -->
        <div class="mt-10 pt-6 border-t border-gray-700 text-center text-sm text-gray-400">
          &copy; {new Date().getFullYear()} GPS Dental Training. All rights reserved.
        </div>
      </div>
    </footer>
  </body>
</html>
