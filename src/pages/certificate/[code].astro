---
/**
 * Public Certificate Verification Page - GPS Dental Training
 * Allows anyone to verify the authenticity of a certificate
 */
import '../../styles/global.css';
import { getSiteSettings } from '../../lib/data/site-settings-loader';
const siteSettings = await getSiteSettings();
import Navbar from '../../components/layout/Navbar';
import Footer from '../../components/layout/Footer';
import { getCertificateByCode } from '../../lib/supabase/queries';

// Get certificate code from URL
const { code } = Astro.params;

// Fetch certificate data
let certificate: any = null;
let error: string | null = null;

if (code) {
  try {
    certificate = await getCertificateByCode(code);
    if (!certificate) {
      error = 'Certificate not found';
    }
  } catch (e) {
    console.error('Error fetching certificate:', e);
    error = 'Unable to verify certificate';
  }
} else {
  error = 'No certificate code provided';
}

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'long',
    day: 'numeric',
    year: 'numeric',
  });
}

function formatEventDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    weekday: 'long',
    month: 'long',
    day: 'numeric',
    year: 'numeric',
  });
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {certificate ? (
      <>
        <title>Certificate Verification - {certificate.attendee_name} | GPS Dental Training</title>
        <meta name="description" content={`Verify the authenticity of the CE certificate issued to ${certificate.attendee_name} for ${certificate.event?.title || 'GPS Dental Training course'}.`} />
      </>
    ) : (
      <>
        <title>Certificate Verification | GPS Dental Training</title>
        <meta name="description" content="Verify the authenticity of CE certificates issued by GPS Dental Training." />
      </>
    )}

    <link rel="icon" href={siteSettings.favicon_url} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Open+Sans:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>

  <body class="min-h-screen flex flex-col bg-[#F8F9FA]">
    <Navbar
      logo={siteSettings.logo_url}
      transparent={false}
      client:load
    />

    <!-- Spacer for fixed navbar -->
    <div class="h-20"></div>

    <main class="flex-1 py-12 lg:py-16">
      <div class="container mx-auto px-4 lg:px-8 max-w-3xl">
        {certificate ? (
          <!-- Valid Certificate -->
          <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full mb-4">
              <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <h1 class="text-3xl font-bold text-[#0C2044] mb-2">Certificate Verified</h1>
            <p class="text-green-600 font-medium">This certificate is authentic and valid</p>
          </div>

          <!-- Certificate Card -->
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <!-- Certificate Header -->
            <div class="bg-gradient-to-br from-[#0C2044] via-[#173D84] to-[#0C2044] p-8 text-white relative">
              <!-- Decorative Border -->
              <div class="absolute inset-4 border-2 border-[#DDC89D]/30 rounded-lg pointer-events-none"></div>

              <div class="text-center relative z-10">
                <!-- GPS Logo Placeholder -->
                <div class="mb-4">
                  <svg class="w-16 h-16 mx-auto text-[#DDC89D]" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
                  </svg>
                </div>

                <p class="text-[#DDC89D] text-sm uppercase tracking-widest mb-3">Certificate of Completion</p>
                <p class="text-white/70 text-sm mb-2">This is to certify that</p>
                <h2 class="text-3xl font-bold mb-4">{certificate.attendee_name}</h2>
                <p class="text-white/70 text-sm mb-2">has successfully completed</p>
                <h3 class="text-xl font-semibold mb-4">
                  {certificate.event?.title?.replace('[TEST] ', '')}
                </h3>

                {certificate.event?.ce_credits && (
                  <div class="inline-flex items-center gap-2 bg-[#DDC89D] text-[#0C2044] px-4 py-2 rounded-full font-bold">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"/>
                      <path d="M9.394 11.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84l7 3a1 1 0 00.788 0l7-3a1 1 0 000-1.838l-7-3z"/>
                    </svg>
                    {certificate.event.ce_credits} CE Credits
                  </div>
                )}
              </div>
            </div>

            <!-- Certificate Details -->
            <div class="p-6 lg:p-8">
              <div class="grid md:grid-cols-2 gap-6">
                <!-- Event Details -->
                <div class="space-y-4">
                  <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Event Details</h4>

                  {certificate.event?.start_date && (
                    <div class="flex items-start gap-3">
                      <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Event Date</p>
                        <p class="font-medium text-[#0C2044]">{formatEventDate(certificate.event.start_date)}</p>
                        {certificate.event?.end_date && certificate.event.end_date !== certificate.event.start_date && (
                          <p class="text-sm text-gray-500">to {formatEventDate(certificate.event.end_date)}</p>
                        )}
                      </div>
                    </div>
                  )}

                  {certificate.event?.venue && (
                    <div class="flex items-start gap-3">
                      <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Location</p>
                        <p class="font-medium text-[#0C2044]">{certificate.event.venue}</p>
                        {certificate.event?.address && (
                          <p class="text-sm text-gray-500">{certificate.event.address}</p>
                        )}
                      </div>
                    </div>
                  )}
                </div>

                <!-- Certificate Info -->
                <div class="space-y-4">
                  <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Certificate Info</h4>

                  <div class="flex items-start gap-3">
                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Certificate Code</p>
                      <p class="font-mono font-medium text-[#0C2044]">{certificate.certificate_code}</p>
                    </div>
                  </div>

                  <div class="flex items-start gap-3">
                    <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Issued On</p>
                      <p class="font-medium text-[#0C2044]">{formatDate(certificate.generated_at)}</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- PACE Notice -->
              <div class="mt-8 pt-6 border-t border-gray-200">
                <div class="flex items-center gap-4 p-4 bg-[#F8F9FA] rounded-xl">
                  <div class="w-12 h-12 bg-[#0C2044] rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-[#DDC89D]" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"/>
                      <path d="M9.394 11.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84l7 3a1 1 0 00.788 0l7-3a1 1 0 000-1.838l-7-3z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-[#0C2044]">PACE Approved Provider</p>
                    <p class="text-sm text-gray-600">
                      GPS Dental Training is a nationally approved PACE program provider for FAGD/MAGD credit.
                    </p>
                  </div>
                </div>
              </div>

              <!-- Download Button - Always show, generates PDF on-the-fly if needed -->
              <div class="mt-6 text-center">
                <a
                  href={`/api/certificates/${certificate.certificate_code}/download`}
                  class="inline-flex items-center gap-2 px-6 py-3 bg-[#0B52AC] text-white font-semibold rounded-lg hover:bg-[#0C2044] transition-colors"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  Download Certificate PDF
                </a>
              </div>
            </div>
          </div>

          <!-- Verification Footer -->
          <div class="mt-8 text-center">
            <p class="text-sm text-gray-500">
              This certificate was verified on {new Date().toLocaleDateString('en-US', {
                month: 'long',
                day: 'numeric',
                year: 'numeric',
                hour: 'numeric',
                minute: '2-digit'
              })}
            </p>
            <p class="text-sm text-gray-500 mt-1">
              Verification URL: <code class="bg-gray-100 px-2 py-0.5 rounded text-xs">{Astro.url.href}</code>
            </p>
          </div>
        ) : (
          <!-- Certificate Not Found -->
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-red-100 rounded-full mb-4">
              <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
            </div>
            <h1 class="text-3xl font-bold text-[#0C2044] mb-2">Certificate Not Found</h1>
            <p class="text-gray-600 mb-8 max-w-md mx-auto">
              {error === 'No certificate code provided'
                ? 'Please provide a valid certificate code to verify.'
                : 'The certificate code you entered could not be found in our system. Please check the code and try again.'}
            </p>

            <!-- Manual Verification Form -->
            <div class="bg-white rounded-xl shadow-sm p-6 lg:p-8 max-w-md mx-auto">
              <h2 class="text-lg font-semibold text-[#0C2044] mb-4">Verify a Certificate</h2>
              <form action="/certificate" method="GET" class="space-y-4">
                <div>
                  <label for="code" class="block text-sm font-medium text-gray-700 mb-1">
                    Certificate Code
                  </label>
                  <input
                    type="text"
                    id="code"
                    name="code"
                    placeholder="Enter certificate code"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#0B52AC] focus:border-transparent"
                    required
                  />
                </div>
                <button
                  type="submit"
                  class="w-full px-4 py-2 bg-[#0B52AC] text-white font-semibold rounded-lg hover:bg-[#0C2044] transition-colors"
                >
                  Verify Certificate
                </button>
              </form>
            </div>

            <!-- Help Section -->
            <div class="mt-8 p-6 bg-blue-50 rounded-xl max-w-md mx-auto">
              <h3 class="font-semibold text-[#0C2044] mb-2">Need Help?</h3>
              <p class="text-sm text-gray-600 mb-3">
                If you believe this is an error or need assistance with your certificate, please contact us.
              </p>
              <a
                href="/contact"
                class="text-[#0B52AC] font-medium hover:underline"
              >
                Contact Support
              </a>
            </div>
          </div>
        )}
      </div>
    </main>

    <Footer client:load />

    <script>
      // Handle form submission to redirect to correct URL format
      const form = document.querySelector('form');
      if (form) {
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          const code = (document.getElementById('code') as HTMLInputElement).value.trim();
          if (code) {
            window.location.href = `/certificate/${encodeURIComponent(code)}`;
          }
        });
      }
    </script>
  </body>
</html>
