---
/**
 * Classic Seminar Detail Template
 * Redesigned to match the ClassicCourseDetail.astro production style.
 * Layout: Hero with featured image → 2-col (description + registration sidebar) →
 * Full-width sections (Moderators, Agenda, Policy, Contact, Accreditation) → Footer.
 *
 * All props, data structures, and components remain unchanged.
 */
import Navbar from '../../layout/Navbar';
import Footer from '../../layout/Footer';
import AddToCalendar from '../../events/AddToCalendar';

interface SessionStats {
  total: number;
  completed: number;
  upcoming: number;
  nextSession: any;
  nextCertificateDate: string;
  sessionsBeforeCertificate: number;
}

interface Props {
  seminar: any;
  moderators: any[];
  sessions: any[];
  siteSettings: {
    logo_url: string;
    logo_white_url: string;
    favicon_url: string;
    company_name: string;
  };
  cleanTitle: string;
  agendaItems: any[];
  benefits: string[];
  certificateDates: string[];
  url: URL;
  sessionStats: SessionStats;
}

const {
  seminar,
  moderators,
  sessions,
  siteSettings,
  cleanTitle,
  agendaItems,
  benefits,
  certificateDates,
  url,
  sessionStats,
} = Astro.props;

function formatCurrency(amount: number): string {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    minimumFractionDigits: 0,
    maximumFractionDigits: 0,
  }).format(amount);
}

// Google Maps embed URL
const mapAddress = seminar.address || seminar.venue || '6320 Sugarloaf Parkway, Duluth, GA 30097';
const mapEmbedUrl = `https://www.google.com/maps?q=${encodeURIComponent(mapAddress)}&output=embed`;
---

<!-- Navigation -->
<Navbar
  logo={siteSettings.logo_url}
  logoWhite={siteSettings.logo_white_url}
  transparent={true}
  client:load
/>

<!-- Hero Section: Featured Image Background -->
<section class="classic-hero relative min-h-[480px] md:min-h-[540px] flex items-end overflow-hidden">
  {/* Background Image */}
  {seminar.featured_image_url ? (
    <div class="absolute inset-0">
      <img
        src={seminar.featured_image_url}
        alt={cleanTitle}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-[#0C2044]/90 via-[#0C2044]/60 to-[#0C2044]/30"></div>
    </div>
  ) : (
    <div class="absolute inset-0 bg-gradient-to-br from-[#0C2044] to-[#173D84]"></div>
  )}

  <div class="container mx-auto px-4 lg:px-8 max-w-7xl relative z-10 pb-12 pt-32 md:pt-40">
    {/* Badges row */}
    <div class="flex flex-wrap items-center gap-3 mb-6">
      <span class="inline-flex items-center gap-2 bg-[#DDC89D] text-[#0C2044] px-4 py-1.5 rounded-full text-sm font-bold">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Once a Month
      </span>
      <span class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm text-white px-4 py-1.5 rounded-full text-sm font-medium border border-white/20">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        {seminar.total_sessions} Sessions
      </span>
      <span class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm text-white px-4 py-1.5 rounded-full text-sm font-medium border border-white/20">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
        </svg>
        {seminar.total_credits} CE Credits
      </span>
    </div>

    {/* Title */}
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-white mb-4 leading-tight font-heading max-w-4xl">
      {cleanTitle}
    </h1>

    {seminar.subtitle && (
      <p class="text-lg md:text-xl text-white/80 mb-8 max-w-3xl">{seminar.subtitle}</p>
    )}

    {/* Action Buttons */}
    <div class="flex flex-wrap items-center gap-3">
      <a href="#register" class="inline-flex items-center gap-2 bg-[#DDC89D] text-[#0C2044] px-6 py-3 rounded-full font-bold text-sm hover:bg-[#c9b586] transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        Enroll Now - {formatCurrency(seminar.price)}
      </a>
      <button
        onclick={`navigator.share ? navigator.share({title: '${cleanTitle.replace(/'/g, "\\'")}', url: '${url}'}) : navigator.clipboard.writeText('${url}').then(() => alert('Link copied!'))`}
        class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm text-white px-6 py-3 rounded-full font-bold text-sm border border-white/30 hover:bg-white/30 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
        </svg>
        Share
      </button>
      {sessionStats?.nextSession && (
        <AddToCalendar
          title={cleanTitle}
          description={seminar.subtitle || `Monthly Seminar - Session ${sessionStats.nextSession.session_number}`}
          location={seminar.venue || '6320 Sugarloaf Parkway, Duluth, GA 30097'}
          startDate={sessionStats.nextSession.session_date}
          endDate={sessionStats.nextSession.session_date}
          url={url.toString()}
          variant="icon"
          client:load
        />
      )}
    </div>
  </div>
</section>

<!-- Main Content: 2-Column Grid (Description + Sidebar) -->
<section class="bg-white py-12 lg:py-16">
  <div class="container mx-auto px-4 lg:px-8 max-w-7xl">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-10 lg:gap-14">

      {/* Left Column: Program Description */}
      <div class="lg:col-span-3">

        {/* Program Description */}
        <div>
          <div class="mb-8">
            <h2 class="text-3xl md:text-4xl font-extrabold text-[#0C2044] font-heading">
              About This Program
            </h2>
            <div class="w-16 h-1 bg-[#26ACF5] mt-4 rounded-full"></div>
          </div>

          {seminar.program_description ? (
            <div class="classic-description-content text-gray-700 leading-relaxed text-base" set:html={seminar.program_description} />
          ) : (
            <div class="text-gray-700 leading-relaxed space-y-4">
              <p>Join our {seminar.total_sessions}-session cycle dedicated to Literature Review, Case Discussions, and Treatment Planning Seminars.</p>
              <p>Sessions are held monthly at our {seminar.venue || 'Duluth, GA'} facility, each lasting approximately {seminar.session_duration || '2 hours'}. Upon completing all sessions, you'll earn {seminar.total_credits} CE credits.</p>
            </div>
          )}

          {benefits.length > 0 && (
            <div class="mt-8">
              <h3 class="text-lg font-bold text-[#0C2044] mb-4">Program Benefits</h3>
              <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                {benefits.map((benefit: string) => (
                  <li class="flex items-start gap-2.5">
                    <svg class="w-5 h-5 text-[#26ACF5] flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4" />
                      <circle cx="12" cy="12" r="10" stroke-width="2" />
                    </svg>
                    <span class="text-gray-700">{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>

        {/* Session Status Card (Mobile only) */}
        {sessionStats && sessionStats.upcoming > 0 && (
          <div class="lg:hidden mt-10 bg-green-50 border border-green-200 rounded-xl p-6">
            <h3 class="font-bold text-green-800 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              Season Status
            </h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div>
                <span class="text-green-700">Sessions Left</span>
                <p class="font-bold text-green-800 text-lg">{sessionStats.upcoming}/{sessionStats.total}</p>
              </div>
              {sessionStats.nextSession && (
                <div>
                  <span class="text-green-700">Next Session</span>
                  <p class="font-bold text-green-800 text-lg">
                    {new Date(sessionStats.nextSession.session_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                  </p>
                </div>
              )}
              <div class="col-span-2 pt-3 border-t border-green-200">
                <span class="text-green-700">Next Certificate</span>
                <p class="font-bold text-green-800">{sessionStats.nextCertificateDate}</p>
              </div>
            </div>
          </div>
        )}
      </div>

      {/* Right Column: Sticky Registration Card */}
      <div class="lg:col-span-2" id="register">
        <div class="sticky top-24 space-y-5">

          {/* Registration Card */}
          <div class="bg-white rounded-2xl border border-gray-200 shadow-lg overflow-hidden">
            {/* Card Header */}
            <div class="bg-gradient-to-br from-[#0C2044] to-[#173D84] px-6 py-6 text-center">
              <div class="text-4xl font-extrabold text-white">{formatCurrency(seminar.price)}</div>
              <div class="text-white/60 text-sm mt-1">One-time enrollment</div>
            </div>

            {/* Card Body */}
            <div class="p-6">
              <ul class="space-y-3 mb-6">
                <li class="flex items-center gap-3 text-sm text-gray-700">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  {seminar.total_sessions} monthly sessions
                </li>
                <li class="flex items-center gap-3 text-sm text-gray-700">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  {seminar.total_credits} CE credits total
                </li>
                <li class="flex items-center gap-3 text-sm text-gray-700">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  PACE-approved provider
                </li>
                <li class="flex items-center gap-3 text-sm text-gray-700">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  1 makeup session included
                </li>
                <li class="flex items-center gap-3 text-sm text-gray-700">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Bi-annual certificates
                </li>
              </ul>
              <a href={`/checkout?seminar=${seminar.id}`} class="w-full bg-[#0B52AC] hover:bg-[#0C2044] text-white font-bold py-3.5 px-5 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2 text-base">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                Add to Cart
              </a>
              <p class="text-xs text-red-500 mt-3 text-center font-medium">Tuition is not refundable or transferable</p>
            </div>
          </div>

          {/* Session Status Card (Desktop) */}
          {sessionStats && sessionStats.upcoming > 0 && (
            <div class="hidden lg:block bg-green-50 border border-green-200 rounded-xl px-5 py-5">
              <h3 class="font-semibold text-green-800 mb-3 text-sm uppercase tracking-wide flex items-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
                Season Status
              </h3>
              <div class="space-y-2">
                <div class="flex items-center justify-between text-sm">
                  <span class="text-green-700">Sessions Left</span>
                  <span class="font-bold text-green-800">{sessionStats.upcoming}/{sessionStats.total}</span>
                </div>
                {sessionStats.nextSession && (
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-green-700">Next Session</span>
                    <span class="font-semibold text-green-800">
                      {new Date(sessionStats.nextSession.session_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                    </span>
                  </div>
                )}
                <div class="pt-2 mt-2 border-t border-green-200">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-green-700">Next Certificate</span>
                    <span class="font-semibold text-green-800">{sessionStats.nextCertificateDate}</span>
                  </div>
                </div>
              </div>
            </div>
          )}

          {/* Have Questions Card */}
          <div class="bg-[#0C2044] rounded-2xl p-5 text-white">
            <h3 class="font-bold text-white mb-2 text-sm">Have Questions?</h3>
            <p class="text-white/70 text-sm mb-4">We're here to help with registration or program details.</p>
            <a
              href={`mailto:${seminar.contact_email || 'gpsdentaltraining@gaprostho.com'}`}
              class="inline-flex items-center gap-2 text-[#DDC89D] text-sm font-semibold hover:gap-3 transition-all"
            >
              Contact Us
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<!-- Moderators Section: Full Width, Gray Background -->
{moderators.length > 0 && (
  <section class="bg-[#F8F9FA] py-14 lg:py-20">
    <div class="container mx-auto px-4 lg:px-8 max-w-7xl">
      {/* Section Title */}
      <div class="mb-12">
        <h2 class="text-3xl md:text-4xl font-extrabold text-[#0C2044] font-heading">
          {moderators.length > 1 ? 'Program Moderators' : 'Program Moderator'}
        </h2>
        <div class="w-16 h-1 bg-[#26ACF5] mt-4 rounded-full"></div>
      </div>

      {/* Moderator Cards */}
      <div class="space-y-16">
        {moderators.map((moderator: any) => (
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 items-start">
            {/* Bio - Left */}
            <div class="md:col-span-2 order-2 md:order-1">
              {moderator.bio ? (
                <div class="classic-description-content text-gray-700 leading-relaxed text-base" set:html={moderator.bio} />
              ) : (
                <p class="text-gray-500 italic">Moderator biography coming soon.</p>
              )}
            </div>

            {/* Photo + Name - Right */}
            <div class="flex flex-col items-center text-center order-1 md:order-2">
              {moderator.photo_url ? (
                <img
                  src={moderator.photo_url}
                  alt={moderator.name}
                  class="w-40 h-40 md:w-48 md:h-48 rounded-full object-cover object-top border-4 border-[#26ACF5] bg-gray-100 mb-4"
                />
              ) : (
                <div class="w-40 h-40 md:w-48 md:h-48 rounded-full bg-gradient-to-br from-[#173D84] to-[#0C2044] flex items-center justify-center border-4 border-[#26ACF5] mb-4">
                  <span class="text-4xl font-bold text-white">
                    {moderator.name.split(' ').map((n: string) => n[0]).join('').substring(0, 2)}
                  </span>
                </div>
              )}
              <div class="text-xs font-semibold text-[#DDC89D] uppercase tracking-wider mb-1">{moderator.role || 'Moderator'}</div>
              <h3 class="text-xl font-bold text-[#0C2044]">{moderator.name}</h3>
              {moderator.title && (
                <p class="text-sm text-[#26ACF5] font-medium mt-1 max-w-[250px]">{moderator.title}</p>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}

<!-- Session Agenda Section: Full Width, White Background -->
<section class="bg-white py-14 lg:py-20">
  <div class="container mx-auto px-4 lg:px-8 max-w-5xl">
    {/* Section Title - Centered */}
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-extrabold text-[#0C2044] font-heading">
        Session Agenda
      </h2>
      <div class="w-16 h-1 bg-[#26ACF5] mt-4 mx-auto rounded-full"></div>
      <p class="text-gray-500 mt-4">Each monthly session follows this structure</p>
    </div>

    {/* Agenda Items */}
    <div class="space-y-4">
      {agendaItems.map((item: any, index: number) => (
        <div class="flex items-center gap-5 border border-gray-200 rounded-xl px-5 py-4 bg-white hover:shadow-sm transition-shadow">
          {/* Number Badge */}
          <div class="flex-shrink-0">
            <div class="bg-[#0C2044] text-white w-10 h-10 rounded-full flex items-center justify-center font-bold text-sm">
              {index + 1}
            </div>
          </div>

          {/* Time Pill */}
          <div class="flex-shrink-0 hidden sm:block">
            <div class="bg-[#26ACF5] text-white px-4 py-2 rounded-lg text-sm font-bold whitespace-nowrap">
              {item.time}
            </div>
          </div>

          {/* Topic Name */}
          <div class="flex-1">
            <h4 class="font-semibold text-[#0C2044] text-base">
              {item.title}
            </h4>
            {item.description && (
              <p class="text-gray-500 text-sm mt-1">{item.description}</p>
            )}
            <span class="sm:hidden text-[#26ACF5] text-sm font-medium">{item.time}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Session Schedule Section: Full Width, Navy Header -->
{sessions && sessions.length > 0 && (
  <section class="bg-white py-14 lg:py-20 border-t border-gray-100">
    <div class="container mx-auto px-4 lg:px-8 max-w-5xl">
      {/* Section Title - Centered */}
      <div class="text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-extrabold text-[#0C2044] font-heading">
          {seminar.year} Session Schedule
        </h2>
        <div class="w-16 h-1 bg-[#26ACF5] mt-4 mx-auto rounded-full"></div>
      </div>

      {/* Sessions Grid */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        {sessions.map((session: any) => {
          const sessionDate = new Date(session.session_date);
          const today = new Date();
          today.setHours(0, 0, 0, 0);
          const isPast = sessionDate < today;
          const isNext = sessionStats?.nextSession?.id === session.id;

          return (
            <div class={`flex items-center gap-4 p-4 rounded-xl transition-colors ${isNext ? 'bg-green-50 ring-2 ring-green-400' : isPast ? 'bg-gray-50' : 'bg-white border border-gray-200 hover:border-gray-300'}`}>
              <div class={`w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0 font-bold ${isPast ? 'bg-green-100 text-green-600' : isNext ? 'bg-[#0C2044] text-white' : 'bg-gray-100 text-gray-500'}`}>
                {isPast ? (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
