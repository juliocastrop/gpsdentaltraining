---
/**
 * Classic Seminar Detail Template
 * A "modernized classic" layout inspired by the production WordPress site.
 * Sponsors bar at top, compact hero, numbered session agenda,
 * single-flow full-width sections, minimal sidebar styling.
 */
import Navbar from '../../layout/Navbar';
import Footer from '../../layout/Footer';

interface Props {
  seminar: any;
  moderators: any[];
  siteSettings: {
    logo_url: string;
    logo_white_url: string;
    favicon_url: string;
    company_name: string;
  };
  cleanTitle: string;
  agendaItems: any[];
  benefits: string[];
  certificateDates: string[];
  url: URL;
}

const {
  seminar,
  moderators,
  siteSettings,
  cleanTitle,
  agendaItems,
  benefits,
  certificateDates,
  url,
} = Astro.props;

function formatCurrency(amount: number): string {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    minimumFractionDigits: 0,
    maximumFractionDigits: 0,
  }).format(amount);
}
---

<!-- Navigation - Solid background (not transparent) for compact hero -->
<Navbar
  logo={siteSettings.logo_url}
  logoWhite={siteSettings.logo_white_url}
  transparent={false}
  client:load
/>

<!-- Sponsors / Accreditation Bar -->
<section class="bg-[#F0F0F0] border-b border-gray-200">
  <div class="container mx-auto px-4 lg:px-8 max-w-7xl py-4">
    <div class="flex items-center justify-center gap-8 md:gap-12 lg:gap-16 flex-wrap">
      {seminar.accreditation_logo_url && (
        <div class="flex items-center gap-2">
          <img src={seminar.accreditation_logo_url} alt="PACE Accreditation" class="h-10 md:h-12 object-contain" />
        </div>
      )}
      {!seminar.accreditation_logo_url && (
        <div class="flex items-center gap-2">
          <img src="/pace-logo.png" alt="PACE - Program Approval for Continuing Education" class="h-10 md:h-12 object-contain" />
        </div>
      )}
      <div class="flex items-center gap-2">
        <img src="/logo.svg" alt="GPS Dental Training" class="h-10 md:h-12 object-contain" />
      </div>
      <div class="flex items-center gap-2 text-center">
        <div>
          <span class="text-lg font-bold text-[#0C2044]">AGD</span>
          <p class="text-[9px] text-gray-500 leading-tight">Academy of General Dentistry</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Compact Hero Section -->
<section class="relative bg-gradient-to-br from-[#0C2044] to-[#173D84] overflow-hidden">
  <!-- Decorative circles -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-[#DDC89D] rounded-full opacity-[0.04] translate-x-1/3 -translate-y-1/3"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-[#26ACF5] rounded-full opacity-[0.04] -translate-x-1/3 translate-y-1/3"></div>

  <div class="relative z-10 container mx-auto px-4 lg:px-8 max-w-7xl py-12 lg:py-16">
    <div class="max-w-4xl">
      <!-- Once a Month Badge -->
      <div class="inline-flex items-center gap-2 bg-[#DDC89D] text-[#0C2044] px-4 py-1.5 rounded-full font-bold text-sm mb-5">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>Once a Month</span>
      </div>

      <!-- Title -->
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-white mb-4 leading-tight font-heading">
        {cleanTitle}
      </h1>

      {seminar.subtitle && (
        <p class="text-lg md:text-xl text-white/80 mb-6 max-w-3xl">{seminar.subtitle}</p>
      )}

      <!-- Meta Info Row -->
      <div class="flex flex-wrap items-center gap-5 text-white/90">
        <div class="flex items-center gap-2 bg-white/10 rounded-full px-4 py-2">
          <svg class="w-5 h-5 text-[#DDC89D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <span class="font-medium text-sm">{seminar.total_sessions} Sessions</span>
        </div>
        <div class="flex items-center gap-2 bg-white/10 rounded-full px-4 py-2">
          <svg class="w-5 h-5 text-[#DDC89D]" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
          </svg>
          <span class="font-medium text-sm">{seminar.total_credits} CE Credits</span>
        </div>
        {seminar.venue && (
          <div class="flex items-center gap-2 bg-white/10 rounded-full px-4 py-2">
            <svg class="w-5 h-5 text-[#DDC89D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="font-medium text-sm">{seminar.venue}</span>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<!-- Main Content -->
<main class="flex-1 bg-[#F8F9FA]">
  <div class="container mx-auto px-4 lg:px-8 max-w-7xl py-10 lg:py-14">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-10">

      <!-- Left Column -->
      <div class="lg:col-span-2 space-y-8">

        <!-- 1. About This Program -->
        <section class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="border-b border-gray-200 px-6 lg:px-8 py-4">
            <h2 class="text-xl lg:text-2xl font-bold text-[#0C2044] flex items-center gap-3">
              <svg class="w-6 h-6 text-[#DDC89D]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              About This Program
            </h2>
          </div>
          <div class="px-6 lg:px-8 py-6">
            {seminar.program_description ? (
              <div class="prose prose-lg max-w-none text-[#293647]" set:html={seminar.program_description} />
            ) : (
              <div class="text-gray-600 leading-relaxed space-y-4">
                <p>Join our {seminar.total_sessions}-session cycle dedicated to Literature Review, Case Discussions, and Treatment Planning Seminars.</p>
                <p>Sessions are held monthly at our {seminar.venue || 'Duluth, GA'} facility, each lasting approximately {seminar.session_duration || '2 hours'}. Upon completing all sessions, you'll earn {seminar.total_credits} CE credits.</p>
              </div>
            )}

            {benefits.length > 0 && (
              <div class="mt-6 pt-6 border-t border-gray-100">
                <h3 class="text-sm font-semibold text-[#0C2044] uppercase tracking-wide mb-4">Program Benefits</h3>
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                  {benefits.map((benefit: string) => (
                    <li class="flex items-start gap-2.5">
                      <svg class="w-5 h-5 text-[#DDC89D] flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-gray-700 text-sm">{benefit}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </section>

        <!-- 2. Moderators -->
        {moderators.length > 0 && (
          <section class="bg-white border border-gray-200 rounded-lg overflow-hidden">
            <div class="border-b border-gray-200 px-6 lg:px-8 py-4">
              <h2 class="text-xl lg:text-2xl font-bold text-[#0C2044] flex items-center gap-3">
                <svg class="w-6 h-6 text-[#0B52AC]" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                </svg>
                {moderators.length > 1 ? 'Program Moderators' : 'Program Moderator'}
              </h2>
            </div>
            <div class="px-6 lg:px-8 py-6 space-y-6">
              {moderators.map((moderator: any) => (
                <div class="flex flex-col sm:flex-row gap-5 items-start">
                  <div class="flex-shrink-0">
                    {moderator.photo_url ? (
                      <img src={moderator.photo_url} alt={moderator.name} class="w-24 h-24 rounded-lg object-cover border-2 border-gray-100" />
                    ) : (
                      <div class="w-24 h-24 rounded-lg bg-gradient-to-br from-[#173D84] to-[#0C2044] flex items-center justify-center">
                        <span class="text-2xl font-bold text-white">{moderator.name.split(' ').map((n: string) => n[0]).join('').substring(0, 2)}</span>
                      </div>
                    )}
                  </div>
                  <div class="flex-1">
                    <div class="text-xs font-semibold text-[#DDC89D] uppercase tracking-wider mb-0.5">{moderator.role || 'Moderator'}</div>
                    <h3 class="text-lg font-bold text-[#0C2044]">{moderator.name}</h3>
                    {moderator.title && <p class="text-[#0B52AC] font-medium text-sm mb-2">{moderator.title}</p>}
                    {moderator.bio && <p class="text-gray-600 text-sm leading-relaxed">{moderator.bio}</p>}
                    {moderator.social_links && Object.keys(moderator.social_links).length > 0 && (
                      <div class="flex gap-3 mt-3">
                        {moderator.social_links.linkedin && (
                          <a href={moderator.social_links.linkedin} target="_blank" rel="noopener noreferrer" class="text-[#0B52AC] hover:text-[#0C2044] transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                          </a>
                        )}
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- 3. Session Agenda - Numbered items with navy circles -->
        <section class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="border-b border-gray-200 px-6 lg:px-8 py-4">
            <h2 class="text-xl lg:text-2xl font-bold text-[#0C2044] flex items-center gap-3">
              <svg class="w-6 h-6 text-[#DDC89D]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
              Session Agenda
            </h2>
          </div>
          <div class="px-6 lg:px-8 py-6">
            <p class="text-gray-500 text-sm mb-6">Each monthly session follows this structure:</p>
            <div class="space-y-0">
              {agendaItems.map((item: any, index: number) => (
                <div class={`flex items-start gap-4 py-4 ${index < agendaItems.length - 1 ? 'border-b border-gray-100' : ''}`}>
                  <!-- Navy numbered circle -->
                  <div class="flex-shrink-0 w-10 h-10 bg-[#0C2044] text-white rounded-full flex items-center justify-center font-bold text-sm">
                    {index + 1}
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-baseline gap-3 mb-0.5">
                      <h3 class="font-semibold text-[#0C2044]">{item.title}</h3>
                      <span class="text-[#0B52AC] text-sm font-medium whitespace-nowrap">{item.time}</span>
                    </div>
                    {item.description && <p class="text-gray-500 text-sm">{item.description}</p>}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </section>

        <!-- 4. Membership Policy - 2x2 grid, simpler border style -->
        <section class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="border-b border-gray-200 px-6 lg:px-8 py-4">
            <h2 class="text-xl lg:text-2xl font-bold text-[#0C2044] flex items-center gap-3">
              <svg class="w-6 h-6 text-[#0B52AC]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 2a1 1 0 00-1 1v1a1 1 0 002 0V3a1 1 0 00-1-1zM4 4h3a3 3 0 006 0h3a2 2 0 012 2v9a2 2 0 01-2 2H4a2 2 0 01-2-2V6a2 2 0 012-2zm2.5 7a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm2.45 4a2.5 2.5 0 10-4.9 0h4.9zM12 9a1 1 0 100 2h3a1 1 0 100-2h-3zm-1 4a1 1 0 011-1h2a1 1 0 110 2h-2a1 1 0 01-1-1z" clip-rule="evenodd"/>
              </svg>
              Membership Policy
            </h2>
          </div>
          <div class="px-6 lg:px-8 py-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <!-- Attendance -->
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                  <svg class="w-5 h-5 text-[#0B52AC]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                  <h3 class="font-bold text-[#0C2044] text-sm">Attendance</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">{seminar.membership_policy || `Attendance is mandatory to obtain ${seminar.total_credits} CE credits. Credits are prorated at ${seminar.credits_per_session} CE per session attended.`}</p>
              </div>
              <!-- Certificates -->
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                  <svg class="w-5 h-5 text-[#DDC89D]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                  <h3 class="font-bold text-[#0C2044] text-sm">Certificates</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">Certificates are distributed twice yearly on {certificateDates.join(' and ')} for all sessions completed during that period.</p>
              </div>
              <!-- Refund Policy -->
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                  <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                  <h3 class="font-bold text-[#0C2044] text-sm">Refund Policy</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">{seminar.refund_policy || 'Tuition is not refundable or transferable. Please consider your schedule carefully before enrolling.'}</p>
              </div>
              <!-- Makeup Sessions -->
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                  <svg class="w-5 h-5 text-[#26ACF5]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>
                  <h3 class="font-bold text-[#0C2044] text-sm">Makeup Sessions</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">{seminar.makeup_policy || 'Only ONE makeup session is allowed per calendar year. Contact us to schedule your makeup session.'}</p>
              </div>
            </div>
          </div>
        </section>

        <!-- 5. Contact Information -->
        <section class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="border-b border-gray-200 px-6 lg:px-8 py-4">
            <h2 class="text-xl lg:text-2xl font-bold text-[#0C2044] flex items-center gap-3">
              <svg class="w-6 h-6 text-[#0B52AC]" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
              </svg>
              Contact Information
            </h2>
          </div>
          <div class="px-6 lg:px-8 py-6">
            <div class="flex flex-col sm:flex-row gap-6">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[#0B52AC] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                <div>
                  <h4 class="font-semibold text-[#0C2044] text-sm mb-0.5">Email</h4>
                  <a href={`mailto:${seminar.contact_email || 'gpsdentaltraining@gaprostho.com'}`} class="text-[#0B52AC] hover:underline text-sm">{seminar.contact_email || 'gpsdentaltraining@gaprostho.com'}</a>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[#0B52AC] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                <div>
                  <h4 class="font-semibold text-[#0C2044] text-sm mb-0.5">Training Center</h4>
                  <p class="text-gray-600 text-sm">{seminar.address || '6320 Sugarloaf Parkway'}<br/>{!seminar.address && 'Duluth, GA 30097'}</p>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Right Column - Sticky Sidebar (Minimal Styling) -->
      <div class="lg:col-span-1">
        <div class="sticky top-24 space-y-5">

          <!-- Registration Card -->
          <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
            <div class="bg-[#0C2044] px-5 py-5 text-center">
              <div class="text-3xl font-extrabold text-white">{formatCurrency(seminar.price)}</div>
              <div class="text-white/60 text-sm mt-1">One-time enrollment</div>
            </div>
            <div class="px-5 py-5">
              <ul class="space-y-2.5 mb-5">
                <li class="flex items-center gap-2.5 text-sm text-gray-700">
                  <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  {seminar.total_sessions} monthly sessions
                </li>
                <li class="flex items-center gap-2.5 text-sm text-gray-700">
                  <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  {seminar.total_credits} CE credits total
                </li>
                <li class="flex items-center gap-2.5 text-sm text-gray-700">
