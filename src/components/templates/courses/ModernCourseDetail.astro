---
/**
 * Modern Course Detail Template
 * The current default design for course detail pages.
 * Full-width hero, countdown timer, card-based content sections, sticky sidebar.
 */
import Navbar from '../../layout/Navbar';
import Footer from '../../layout/Footer';
import CountdownTimer from '../../events/CountdownTimer';
import TicketSelector from '../../tickets/TicketSelector';
import WaitlistForm from '../../tickets/WaitlistForm';
import type { Speaker } from '../../../types/database';

interface MigratedScheduleTopic {
  name: string;
  start_time: string;
  end_time: string;
  speakers: number[];
  location: string;
  description: string;
}

interface MigratedSchedule {
  date: string;
  tab_label: string;
  topics: MigratedScheduleTopic[];
}

interface Props {
  event: any;
  availability: any;
  siteSettings: {
    logo_url: string;
    logo_white_url: string;
    favicon_url: string;
    company_name: string;
  };
  cleanTitle: string;
  cleanDescription: string | null;
  dateDisplay: string;
  learningObjectives: string[];
  migratedSchedules: MigratedSchedule[];
  isUpcoming: boolean;
  isSoldOut: boolean;
  dayCount: number;
  url: URL;
}

const {
  event,
  availability,
  siteSettings,
  cleanTitle,
  cleanDescription,
  dateDisplay,
  learningObjectives,
  migratedSchedules,
  isUpcoming,
  isSoldOut,
  dayCount,
  url,
} = Astro.props;

// Helper functions
function formatDateShort(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}

function getDayName(dayNum: number, startDate: string): string {
  const date = new Date(startDate);
  date.setDate(date.getDate() + dayNum - 1);
  return date.toLocaleDateString('en-US', { weekday: 'long', month: 'short', day: 'numeric' });
}

function formatScheduleDate(dateStr: string): string {
  if (!dateStr) return '';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { weekday: 'long', month: 'short', day: 'numeric' });
}

function formatTimeRange(startTime: string, endTime: string): string {
  if (!startTime) return '';
  const formatTime = (time: string) => {
    const [hours, minutes] = time.split(':');
    const h = parseInt(hours);
    const ampm = h >= 12 ? 'PM' : 'AM';
    const h12 = h % 12 || 12;
    return `${h12}:${minutes} ${ampm}`;
  };
  if (endTime) {
    return `${formatTime(startTime)} - ${formatTime(endTime)}`;
  }
  return formatTime(startTime);
}

function cleanHtmlDescription(html: string | null | undefined): string {
  if (!html) return '';
  let text = html.replace(/<[^>]*>/g, '');
  text = text
    .replace(/&amp;/g, '&')
    .replace(/&lt;/g, '<')
    .replace(/&gt;/g, '>')
    .replace(/&quot;/g, '"')
    .replace(/&#39;/g, "'")
    .replace(/&nbsp;/g, ' ');
  return text.trim();
}
---

<!-- Navigation -->
<Navbar
  logo={siteSettings.logo_url}
  logoWhite={siteSettings.logo_white_url}
  transparent={true}
  client:load
/>

<!-- Hero Section -->
<section class="relative min-h-[60vh] lg:min-h-[70vh] flex items-end">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    {event.featured_image_url ? (
      <img
        src={event.featured_image_url}
        alt={cleanTitle}
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="w-full h-full bg-gradient-to-br from-[#173D84] to-[#0C2044]"></div>
    )}
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-[#0C2044] via-[#0C2044]/70 to-transparent"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 w-full pb-12 pt-24">
    <div class="container mx-auto px-4 lg:px-8 max-w-7xl">
      <div class="max-w-4xl">
        <!-- Badges Row -->
        <div class="flex flex-wrap items-center gap-3 mb-6">
          {event.ce_credits > 0 && (
            <div class="inline-flex items-center gap-2 bg-[#DDC89D] text-[#0C2044] px-4 py-2 rounded-full font-bold text-sm shadow-lg">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
              </svg>
              {event.ce_credits} CE Credits
            </div>
          )}
          {isSoldOut && (
            <div class="inline-flex items-center gap-2 bg-red-600 text-white px-4 py-2 rounded-full font-bold text-sm shadow-lg animate-pulse">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
              </svg>
              SOLD OUT
            </div>
          )}
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white mb-6 leading-tight font-heading">
          {cleanTitle}
        </h1>

        <!-- Meta Info -->
        <div class="flex flex-wrap items-center gap-6 text-white/90 text-lg">
          <div class="flex items-center gap-2">
            <svg class="w-6 h-6 text-[#DDC89D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span class="font-medium">{dateDisplay}</span>
          </div>
          {event.venue && (
            <div class="flex items-center gap-2">
              <svg class="w-6 h-6 text-[#DDC89D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="font-medium">{event.venue}</span>
            </div>
          )}
          {dayCount > 0 && (
            <div class="flex items-center gap-2">
              <svg class="w-6 h-6 text-[#DDC89D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">{dayCount} Day{dayCount > 1 ? 's' : ''}</span>
            </div>
          )}
        </div>

        <!-- Share Buttons -->
        <div class="flex items-center gap-3 mt-8">
          <span class="text-white/60 text-sm">Share:</span>
          <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url.href)}`} target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center text-white transition-colors" aria-label="Share on Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(url.href)}&text=${encodeURIComponent(cleanTitle)}`} target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center text-white transition-colors" aria-label="Share on X">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(url.href)}&title=${encodeURIComponent(cleanTitle)}`} target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center text-white transition-colors" aria-label="Share on LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href={`mailto:?subject=${encodeURIComponent(cleanTitle)}&body=${encodeURIComponent(`Check out this dental course: ${url.href}`)}`} class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center text-white transition-colors" aria-label="Share via Email">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Countdown Timer Section -->
{isUpcoming && (
  <section class="bg-gradient-to-r from-[#0C2044] via-[#173D84] to-[#0C2044] py-10 md:py-14 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-1/4 w-64 h-64 bg-[#DDC89D] rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-[#26ACF5] rounded-full blur-3xl"></div>
    </div>
    <div class="container mx-auto px-4 lg:px-8 max-w-5xl relative z-10">
      <div class="text-center mb-8">
        <h2 class="text-white/60 text-sm md:text-base uppercase tracking-[0.2em] font-medium mb-2">Course Starts In</h2>
        <div class="w-16 h-1 bg-[#DDC89D] mx-auto rounded-full"></div>
      </div>
      <CountdownTimer targetDate={event.start_date} client:load />
      <div class="text-center mt-8">
        <p class="text-white/70 text-sm md:text-base">
          <span class="text-[#DDC89D] font-semibold">{dateDisplay}</span>
          {event.venue && <span class="mx-2">&bull;</span>}
          {event.venue && <span>{event.venue}</span>}
        </p>
      </div>
    </div>
  </section>
)}

<!-- Main Content -->
<main class="flex-1 bg-[#F8F9FA]">
  <div class="container mx-auto px-4 lg:px-8 max-w-7xl py-12 lg:py-16">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">

      <!-- Left Column - Main Content -->
      <div class="lg:col-span-2 space-y-10 lg:space-y-12">

        <!-- 1. Course Description -->
        {cleanDescription && (
          <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
            <h2 class="text-2xl lg:text-3xl font-bold text-[#0C2044] mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-br from-[#DDC89D] to-[#BFAC87] rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-[#0C2044]" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
              </span>
              <span>Course Description</span>
            </h2>
            <div class="course-description-content" set:html={cleanDescription} />
          </div>
        )}

        <!-- 2. Video Section -->
        {event.video_url && (
          <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
            <h2 class="text-2xl lg:text-3xl font-bold text-[#0C2044] mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-br from-[#26ACF5] to-[#0B52AC] rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
                </svg>
              </span>
              <span>Course Preview</span>
            </h2>
            <div class="relative aspect-video rounded-xl overflow-hidden bg-[#0C2044] shadow-xl">
              {event.video_url.includes('youtube.com') || event.video_url.includes('youtu.be') ? (
                <iframe src={event.video_url.replace('watch?v=', 'embed/').replace('youtu.be/', 'youtube.com/embed/')} title="Course Preview Video" class="absolute inset-0 w-full h-full" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              ) : event.video_url.includes('vimeo.com') ? (
                <iframe src={event.video_url.replace('vimeo.com/', 'player.vimeo.com/video/')} title="Course Preview Video" class="absolute inset-0 w-full h-full" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
              ) : (
                <video src={event.video_url} controls class="absolute inset-0 w-full h-full object-cover" poster={event.featured_image_url || undefined}>Your browser does not support the video tag.</video>
              )}
            </div>
          </div>
        )}

        <!-- 3. Speakers Section -->
        {event.speakers && event.speakers.length > 0 && (
          <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
            <h2 class="text-2xl lg:text-3xl font-bold text-[#0C2044] mb-8 flex items-center gap-4">
              <span class="w-12 h-12 bg-gradient-to-br from-[#0B52AC] to-[#173D84] rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                </svg>
              </span>
              <span>{event.speakers.length > 1 ? 'Meet Your Instructors' : 'Meet Your Instructor'}</span>
            </h2>
            <div class="space-y-8">
              {event.speakers.map((speaker: Speaker) => (
                <div class="flex flex-col md:flex-row gap-6 p-6 bg-[#F8F9FA] rounded-xl hover:shadow-md transition-shadow">
                  <div class="flex-shrink-0">
                    {speaker.photo_url ? (
                      <img src={speaker.photo_url} alt={speaker.name.replace('[TEST] ', '')} class="w-32 h-32 md:w-40 md:h-40 rounded-xl object-cover object-top shadow-lg bg-gray-100" />
                    ) : (
                      <div class="w-32 h-32 md:w-40 md:h-40 rounded-xl bg-gradient-to-br from-[#173D84] to-[#0C2044] flex items-center justify-center">
                        <span class="text-4xl font-bold text-white">{speaker.name.replace('[TEST] ', '').split(' ').map((n: string) => n[0]).join('').substring(0, 2)}</span>
                      </div>
                    )}
                  </div>
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-[#0C2044] mb-1">{speaker.name.replace('[TEST] ', '')}</h3>
                    {speaker.title && <p class="text-[#DDC89D] font-semibold mb-3">{speaker.title}</p>}
                    {speaker.bio && <p class="text-gray-600 leading-relaxed">{speaker.bio}</p>}
                    {speaker.social_links && Object.keys(speaker.social_links).length > 0 && (
                      <div class="flex gap-3 mt-4">
                        {speaker.social_links.linkedin && (
                          <a href={speaker.social_links.linkedin} target="_blank" rel="noopener noreferrer" class="text-[#0B52AC] hover:text-[#0C2044] transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                          </a>
                        )}
                        {speaker.social_links.twitter && (
                          <a href={speaker.social_links.twitter} target="_blank" rel="noopener noreferrer" class="text-[#0B52AC] hover:text-[#0C2044] transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                          </a>
                        )}
                        {speaker.social_links.website && (
                          <a href={speaker.social_links.website} target="_blank" rel="noopener noreferrer" class="text-[#0B52AC] hover:text-[#0C2044] transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>
                          </a>
                        )}
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- 4. Course Objectives -->
        {learningObjectives && learningObjectives.length > 0 && (
          <div class="bg-gradient-to-br from-[#0C2044] to-[#173D84] rounded-2xl shadow-xl p-8 lg:p-12 text-white relative overflow-hidden">
            <div class="absolute top-0 right-0 w-64 h-64 bg-[#DDC89D] rounded-full opacity-5 translate-x-1/2 -translate-y-1/2"></div>
            <h2 class="text-2xl lg:text-3xl font-bold text-white mb-8 flex items-center gap-4 relative z-10">
              <span class="w-12 h-12 bg-gradient-to-br from-[#DDC89D] to-[#BFAC87] rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-[#0C2044]" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </span>
              <span>Course Objectives</span>
            </h2>
            <p class="text-white/70 mb-8 text-lg relative z-10">Upon completion of this course, participants will be able to:</p>
            <ul class="space-y-5 relative z-10">
              {learningObjectives.map((objective: string) => (
                <li class="flex items-start gap-4 bg-white/5 rounded-xl p-4 hover:bg-white/10 transition-colors">
                  <span class="flex-shrink-0 w-8 h-8 bg-[#DDC89D] rounded-lg flex items-center justify-center mt-0.5 shadow-md">
                    <svg class="w-5 h-5 text-[#0C2044]" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </span>
                  <span class="text-white/90 leading-relaxed text-base lg:text-lg">{objective}</span>
                </li>
              ))}
            </ul>
          </div>
        )}

        <!-- 5. Gallery Section -->
        {event.gallery_images && event.gallery_images.length > 0 && (
          <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
            <h2 class="text-2xl lg:text-3xl font-bold text-[#0C2044] mb-8 flex items-center gap-4">
