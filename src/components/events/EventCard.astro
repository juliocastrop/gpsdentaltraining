---
import type { Event } from '../../types/database';

interface Props {
  event: Event;
  variant?: 'card' | 'list';
}

const { event, variant = 'card' } = Astro.props;

function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}

function formatDateRange(startDate: string, endDate: string | null): string {
  const start = new Date(startDate);
  if (!endDate) {
    return formatDate(startDate);
  }
  const end = new Date(endDate);

  // Same month
  if (start.getMonth() === end.getMonth() && start.getFullYear() === end.getFullYear()) {
    return `${start.toLocaleDateString('en-US', { month: 'short' })} ${start.getDate()}-${end.getDate()}, ${start.getFullYear()}`;
  }

  return `${formatDate(startDate)} - ${formatDate(endDate)}`;
}

const dateDisplay = formatDateRange(event.start_date, event.end_date);
const eventUrl = `/courses/${event.slug}`;
---

{variant === 'card' ? (
  <article class="card group">
    <a href={eventUrl} class="block">
      <!-- Image -->
      <div class="relative overflow-hidden aspect-video">
        <img
          src={event.featured_image_url || '/placeholder-course.jpg'}
          alt={event.title}
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
        <!-- Date Badge -->
        <div class="event-date-badge">
          <span class="text-sm font-semibold text-gps-navy-dark">{dateDisplay}</span>
        </div>
        <!-- CE Credits Badge -->
        {event.ce_credits > 0 && (
          <div class="absolute top-4 right-4 ce-badge text-xs">
            {event.ce_credits} CE
          </div>
        )}
      </div>

      <!-- Content -->
      <div class="card-body">
        <h3 class="text-lg font-semibold text-gps-navy-dark mb-2 line-clamp-2 group-hover:text-gps-blue transition-colors">
          {event.title}
        </h3>

        {event.venue && (
          <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="truncate">{event.venue}</span>
          </div>
        )}

        {event.description && (
          <p class="text-sm text-gray-600 line-clamp-2">{event.description}</p>
        )}

        <div class="mt-4 flex items-center justify-between">
          <span class="text-gps-cta font-semibold text-sm group-hover:underline">
            View Course â†’
          </span>
        </div>
      </div>
    </a>
  </article>
) : (
  <article class="card p-4 flex gap-4 group">
    <a href={eventUrl} class="flex gap-4 w-full">
      <!-- Image -->
      <div class="relative w-40 h-28 flex-shrink-0 overflow-hidden rounded-lg">
        <img
          src={event.featured_image_url || '/placeholder-course.jpg'}
          alt={event.title}
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      </div>

      <!-- Content -->
      <div class="flex-1 min-w-0">
        <div class="flex items-start justify-between gap-4">
          <div>
            <h3 class="font-semibold text-gps-navy-dark group-hover:text-gps-blue transition-colors line-clamp-1">
              {event.title}
            </h3>
            <div class="flex items-center gap-4 mt-1 text-sm text-gray-600">
              <span class="flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {dateDisplay}
              </span>
              {event.venue && (
                <span class="flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  </svg>
                  {event.venue}
                </span>
              )}
            </div>
          </div>
          {event.ce_credits > 0 && (
            <span class="ce-badge text-xs flex-shrink-0">
              {event.ce_credits} CE
            </span>
          )}
        </div>
        {event.description && (
          <p class="text-sm text-gray-600 mt-2 line-clamp-1">{event.description}</p>
        )}
      </div>
    </a>
  </article>
)}
